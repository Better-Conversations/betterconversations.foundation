---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  aspectRatio?: '16:9' | '4:3' | '1:1' | '3:2' | '2:3' | 'auto';
  loading?: 'lazy' | 'eager';
  sizes?: string;
  caption?: string;
  onClick?: boolean;
}

const {
  src,
  alt,
  class: className = '',
  aspectRatio = 'auto',
  loading = 'lazy',
  sizes = '(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 60vw',
  caption,
  onClick = false
} = Astro.props;

// Aspect ratio classes
const aspectRatioClasses = {
  '16:9': 'aspect-w-16 aspect-h-9',
  '4:3': 'aspect-w-4 aspect-h-3',
  '1:1': 'aspect-w-1 aspect-h-1',
  '3:2': 'aspect-w-3 aspect-h-2',
  '2:3': 'aspect-w-2 aspect-h-3',
  'auto': ''
};

const containerClass = aspectRatio !== 'auto' ? aspectRatioClasses[aspectRatio] : '';
const imageId = `img-${Math.random().toString(36).substring(7)}`;
---

<figure class={`responsive-image-figure ${onClick ? 'clickable' : ''}`}>
  <div class={`relative overflow-hidden rounded-lg shadow-lg ${containerClass} ${className}`}>
    <img
      id={imageId}
      src={src}
      alt={alt}
      loading={loading}
      sizes={sizes}
      class={`
        ${aspectRatio === 'auto' ? 'w-full h-auto' : 'absolute inset-0 w-full h-full object-cover'}
        transition-transform duration-300 hover:scale-105
      `}
    />
    {onClick && (
      <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-10 transition-opacity duration-300 cursor-pointer flex items-center justify-center">
        <svg class="w-12 h-12 text-white opacity-0 hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
        </svg>
      </div>
    )}
  </div>
  {caption && (
    <figcaption class="mt-3 text-sm text-gray-600 text-center italic">
      {caption}
    </figcaption>
  )}
</figure>

<!-- Lightbox Modal -->
{onClick && (
  <div id={`lightbox-${imageId}`} class="lightbox-modal hidden fixed inset-0 z-50 bg-black bg-opacity-90 flex items-center justify-center p-4">
    <button class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <img
      src={src}
      alt={alt}
      class="max-w-full max-h-full object-contain"
    />
  </div>
)}

<style>
  .responsive-image-figure {
    margin: 0;
  }
  
  .clickable {
    cursor: pointer;
  }
  
  /* Aspect ratio support without Tailwind plugin */
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
  }
  
  .aspect-w-4 {
    position: relative;
    padding-bottom: 75%; /* 4:3 */
  }
  
  .aspect-w-1 {
    position: relative;
    padding-bottom: 100%; /* 1:1 */
  }
  
  .aspect-w-3 {
    position: relative;
    padding-bottom: 66.67%; /* 3:2 */
  }
  
  .aspect-w-2 {
    position: relative;
    padding-bottom: 150%; /* 2:3 */
  }
  
  .lightbox-modal {
    backdrop-filter: blur(4px);
  }
  
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .responsive-image-figure img {
      border-radius: 0.5rem;
    }
    
    .responsive-image-figure figcaption {
      font-size: 0.75rem;
      padding: 0 1rem;
    }
  }
  
  /* Tablet optimizations */
  @media (min-width: 641px) and (max-width: 1024px) {
    .responsive-image-figure {
      max-width: 90%;
      margin: 0 auto;
    }
  }
  
  /* Desktop optimizations */
  @media (min-width: 1025px) {
    .responsive-image-figure {
      max-width: 80%;
      margin: 0 auto;
    }
  }
</style>

<script define:vars={{ imageId }}>
  document.addEventListener('DOMContentLoaded', () => {
    const image = document.getElementById(imageId);
    const lightbox = document.getElementById(`lightbox-${imageId}`);
    
    if (image && lightbox) {
      // Open lightbox on image click
      image.parentElement.addEventListener('click', () => {
        lightbox.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });
      
      // Close lightbox on close button or background click
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox || e.target.closest('button')) {
          lightbox.classList.add('hidden');
          document.body.style.overflow = '';
        }
      });
      
      // Close on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !lightbox.classList.contains('hidden')) {
          lightbox.classList.add('hidden');
          document.body.style.overflow = '';
        }
      });
    }
  });
</script>