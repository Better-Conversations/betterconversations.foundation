---
export interface TimelineEvent {
  date: string;
  title: string;
  description: string;
  color?: string;
  icon?: string;
}

export interface Props {
  events: TimelineEvent[];
  orientation?: 'vertical' | 'horizontal';
}

const { events, orientation = 'vertical' } = Astro.props;

// Check if we're in PDF mode
const isPDF = Astro.url.pathname.endsWith('.pdf');
---

<div class={`timeline timeline-${orientation} ${isPDF ? 'pdf-mode' : ''}`}>
  {events.map((event, index) => (
    <div class="timeline-item" data-index={index}>
      <div class="timeline-marker" style={`--marker-color: ${event.color || '#54C4B6'}`}>
        {event.icon ? (
          <span class="timeline-icon">{event.icon}</span>
        ) : (
          <span class="timeline-number">{index + 1}</span>
        )}
      </div>
      <div class="timeline-content">
        <div class="timeline-date">{event.date}</div>
        <h4 class="timeline-title">{event.title}</h4>
        <p class="timeline-description">{event.description}</p>
      </div>
    </div>
  ))}
</div>

<style>
  .timeline {
    position: relative;
    padding: 2rem 0;
  }
  
  /* Vertical Timeline */
  .timeline-vertical {
    padding-left: 3rem;
  }
  
  .timeline-vertical::before {
    content: '';
    position: absolute;
    left: 1.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #54C4B6, #A8D381);
    opacity: 0.3;
  }
  
  .timeline-vertical .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    opacity: 0;
    transform: translateX(20px);
    animation: slideIn 0.6s ease-out forwards;
  }
  
  .timeline-vertical .timeline-item:nth-child(1) { animation-delay: 0.1s; }
  .timeline-vertical .timeline-item:nth-child(2) { animation-delay: 0.2s; }
  .timeline-vertical .timeline-item:nth-child(3) { animation-delay: 0.3s; }
  .timeline-vertical .timeline-item:nth-child(4) { animation-delay: 0.4s; }
  .timeline-vertical .timeline-item:nth-child(5) { animation-delay: 0.5s; }
  
  .timeline-vertical .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: var(--marker-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    box-shadow: 0 4px 12px color-mix(in srgb, var(--marker-color) 40%, transparent);
    z-index: 1;
    transition: transform 0.3s ease;
  }
  
  .timeline-vertical .timeline-marker:hover {
    transform: scale(1.1);
  }
  
  .timeline-vertical .timeline-content {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-left: 3px solid var(--marker-color);
    margin-left: 2rem;
    transition: all 0.3s ease;
  }
  
  .timeline-vertical .timeline-content:hover {
    transform: translateX(4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }
  
  /* Horizontal Timeline */
  .timeline-horizontal {
    display: flex;
    overflow-x: auto;
    padding: 3rem 1rem;
    gap: 2rem;
    position: relative;
  }
  
  .timeline-horizontal::before {
    content: '';
    position: absolute;
    top: 4rem;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(to right, #54C4B6, #A8D381);
    opacity: 0.3;
  }
  
  .timeline-horizontal .timeline-item {
    flex: 0 0 250px;
    position: relative;
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.6s ease-out forwards;
  }
  
  .timeline-horizontal .timeline-item:nth-child(1) { animation-delay: 0.1s; }
  .timeline-horizontal .timeline-item:nth-child(2) { animation-delay: 0.2s; }
  .timeline-horizontal .timeline-item:nth-child(3) { animation-delay: 0.3s; }
  .timeline-horizontal .timeline-item:nth-child(4) { animation-delay: 0.4s; }
  
  .timeline-horizontal .timeline-marker {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--marker-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    box-shadow: 0 4px 12px color-mix(in srgb, var(--marker-color) 40%, transparent);
    z-index: 1;
  }
  
  .timeline-horizontal .timeline-content {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-top: 3px solid var(--marker-color);
    margin-top: 3rem;
    transition: all 0.3s ease;
  }
  
  .timeline-horizontal .timeline-content:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }
  
  /* Common Styles */
  .timeline-icon {
    font-size: 1.5rem;
  }
  
  .timeline-number {
    font-size: 1.2rem;
  }
  
  .timeline-date {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .timeline-title {
    font-size: 1.125rem;
    font-weight: bold;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
  }
  
  .timeline-description {
    font-size: 0.875rem;
    color: #4b5563;
    margin: 0;
    line-height: 1.5;
  }
  
  /* PDF mode adjustments */
  .timeline.pdf-mode .timeline-item {
    opacity: 1 !important;
    transform: none !important;
    animation: none !important;
  }
  
  .timeline.pdf-mode .timeline-marker {
    transition: none !important;
  }
  
  .timeline.pdf-mode .timeline-content {
    transition: none !important;
  }
  
  .timeline.pdf-mode .timeline-item:hover .timeline-content {
    transform: none !important;
    box-shadow: none !important;
  }
  
  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .timeline-horizontal {
      scroll-snap-type: x mandatory;
    }
    
    .timeline-horizontal .timeline-item {
      scroll-snap-align: center;
    }
  }
</style>

<script>
  // Skip animations in PDF mode
  if (!window.location.pathname.endsWith('.pdf')) {
    // Optional: Add intersection observer for staggered animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        (entry.target as HTMLElement).style.animationPlayState = 'running';
      }
    });
  }, observerOptions);
  
  // Pause animations until in view
    document.querySelectorAll('.timeline-item').forEach(item => {
      if (item instanceof HTMLElement) {
        item.style.animationPlayState = 'paused';
      }
      observer.observe(item);
    });
  }
</script>