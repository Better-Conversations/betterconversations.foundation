---
export interface ProgressItem {
  label: string;
  value: number;
  color?: string;
  icon?: string;
}

export interface Props {
  items: ProgressItem[];
  maxValue?: number;
  showPercentage?: boolean;
}

const { items, maxValue = 100, showPercentage = true } = Astro.props;
---

<div class="progress-bar-pdf">
  {items.map((item) => {
    const percentage = Math.round((item.value / maxValue) * 100);
    return (
      <div class="progress-item">
        <div class="progress-header">
          {item.icon && <span class="progress-icon">{item.icon}</span>}
          <span class="progress-label">{item.label}</span>
          {showPercentage && <span class="progress-value">{percentage}%</span>}
        </div>
        <div class="progress-track">
          <div 
            class="progress-fill" 
            style={`width: ${percentage}%; background-color: ${item.color || '#54C4B6'};`}
          />
        </div>
      </div>
    );
  })}
</div>

<style>
  .progress-bar-pdf {
    margin: 20px 0;
  }
  
  .progress-item {
    margin-bottom: 20px;
    page-break-inside: avoid;
    break-inside: avoid;
  }
  
  .progress-item:last-child {
    margin-bottom: 0;
  }
  
  .progress-header {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
    font-size: 14px;
  }
  
  .progress-icon {
    font-size: 18px;
    margin-right: 8px;
  }
  
  .progress-label {
    flex: 1;
    color: #333;
    font-weight: 500;
  }
  
  .progress-value {
    font-weight: 600;
    color: #555;
    min-width: 45px;
    text-align: right;
  }
  
  .progress-track {
    height: 10px;
    background-color: #f0f0f0;
    border-radius: 5px;
    overflow: hidden;
    border: 1px solid #e0e0e0;
  }
  
  .progress-fill {
    height: 100%;
    border-radius: 4px;
    transition: none;
  }
</style>