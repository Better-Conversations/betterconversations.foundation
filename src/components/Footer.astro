<style>
    .footer-container.expanded .footer-expanded {
        max-height: 500px;
    }

    .footer-container.expanded .chevron-icon {
        transform: rotate(180deg);
    }
</style>

<script>
    let isExpanded = false;
    let autoExpanded = false;

    // Get elements
    const footer = document.querySelector('.footer-container');
    const expandBtn = document.querySelector('.expand-footer-btn');

    // Manual toggle function
    function toggleFooter() {
        isExpanded = !isExpanded;
        if (isExpanded) {
            footer?.classList.add('expanded');
        } else {
            footer?.classList.remove('expanded');
            autoExpanded = false;
        }
    }

    // Add click event listener
    expandBtn?.addEventListener('click', toggleFooter);

    // Auto-expand when scrolling near bottom
    let ticking = false;
    function handleScroll() {
        if (!ticking) {
            window.requestAnimationFrame(() => {
                const scrollPosition = window.scrollY + window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const threshold = 50; // Expand when within 50px of bottom

                if (scrollPosition >= documentHeight - threshold && !isExpanded && !autoExpanded) {
                    footer?.classList.add('expanded');
                    autoExpanded = true;
                    isExpanded = true;
                } else if (scrollPosition < documentHeight - threshold - 150 && autoExpanded && isExpanded) {
                    // Auto-collapse when scrolling back up (with larger buffer to prevent jitter)
                    footer?.classList.remove('expanded');
                    autoExpanded = false;
                    isExpanded = false;
                }
                ticking = false;
            });
            ticking = true;
        }
    }

    // Add scroll event listener
    window.addEventListener('scroll', handleScroll);
</script>