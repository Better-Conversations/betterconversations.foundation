<style>
    .scroll-indicator {
        opacity: 0;
    }
    
    .show-scroll-indicator .scroll-indicator {
        opacity: 1;
    }
</style>

<script>
    // Get elements
    const minimalFooter = document.querySelector('.footer-minimal');
    const scrollIndicator = document.querySelector('.scroll-indicator');
    
    // Show/hide scroll indicator when near bottom
    let ticking = false;
    function handleScroll() {
        if (!ticking) {
            window.requestAnimationFrame(() => {
                const scrollPosition = window.scrollY + window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const threshold = 200; // Show indicator when within 200px of bottom
                
                if (scrollPosition >= documentHeight - threshold) {
                    minimalFooter?.classList.add('show-scroll-indicator');
                } else {
                    minimalFooter?.classList.remove('show-scroll-indicator');
                }
                
                ticking = false;
            });
            ticking = true;
        }
    }
    
    // Add scroll event listener
    window.addEventListener('scroll', handleScroll);
</script>