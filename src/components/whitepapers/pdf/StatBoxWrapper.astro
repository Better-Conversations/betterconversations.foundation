---
// This wrapper adapts the StatBox interface to StatBoxPDF
import StatBoxPDF from './StatBoxPDF.astro';

export interface Props {
  number: string;
  label: string;
  color?: string;
  trend?: 'up' | 'down' | 'neutral';
  animate?: boolean;
}

const { number, label, color, trend, animate } = Astro.props;

// Convert to StatBoxPDF format
const stats = [{
  value: number,
  label: label,
  trend: trend,
  color: color
}];
---

<StatBoxPDF stats={stats} />