---
export interface Props {
  number: string;
  label: string;
  color?: string;
  trend?: 'up' | 'down' | 'neutral';
}

const { number, label, color = '#54C4B6', trend } = Astro.props;
---

<div class="stat-box-pdf" style={`--stat-color: ${color}`}>
  <div class="stat-content">
    <div class="stat-number">{number}</div>
    <div class="stat-label">{label}</div>
  </div>
  {trend && (
    <div class="stat-trend">
      {trend === 'up' && <span class="trend-arrow">↑</span>}
      {trend === 'down' && <span class="trend-arrow">↓</span>}
      {trend === 'neutral' && <span class="trend-arrow">→</span>}
    </div>
  )}
</div>

<style>
  .stat-box-pdf {
    border: 2px solid var(--stat-color);
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    margin: 10px;
    position: relative;
    background-color: white;
    min-width: 150px;
    display: inline-block;
  }
  
  .stat-content {
    position: relative;
    z-index: 1;
  }
  
  .stat-number {
    font-size: 32px;
    font-weight: bold;
    color: var(--stat-color);
    margin-bottom: 8px;
  }
  
  .stat-label {
    font-size: 14px;
    color: #666;
    line-height: 1.3;
  }
  
  .stat-trend {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 20px;
    font-weight: bold;
  }
  
  .stat-trend .trend-arrow {
    display: inline-block;
  }
  
  .stat-trend span {
    color: var(--stat-color);
  }
</style>