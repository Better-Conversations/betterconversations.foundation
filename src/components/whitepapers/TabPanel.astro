---
export interface Tab {
  label: string;
  content: string;
  icon?: string;
}

export interface Props {
  tabs: Tab[];
  defaultTab?: number;
}

const { tabs, defaultTab = 0 } = Astro.props;
const tabId = Math.random().toString(36).substring(7);

// Check if we're in PDF mode
const isPDF = Astro.url.pathname.endsWith('.pdf');
---

{isPDF ? (
  <!-- PDF Version - All tabs expanded -->
  <div class="tab-panel-pdf">
    {tabs.map((tab) => (
      <div class="tab-section-pdf">
        <div class="tab-header-pdf">
          {tab.icon && <span class="tab-icon-pdf">{tab.icon}</span>}
          <h4 class="tab-title-pdf">{tab.label}</h4>
        </div>
        <div class="tab-content-pdf" set:html={tab.content} />
      </div>
    ))}
  </div>
) : (
  <!-- Interactive Version -->
  <div class="tab-container" data-tab-id={tabId}>
  <div class="tab-header">
    {tabs.map((tab, index) => (
      <button 
        class={`tab-button ${index === defaultTab ? 'active' : ''}`}
        data-tab-index={index}
      >
        {tab.icon && <span class="tab-icon">{tab.icon}</span>}
        <span class="tab-label">{tab.label}</span>
      </button>
    ))}
    <div class="tab-indicator" style={`transform: translateX(${defaultTab * 100}%);`}></div>
  </div>
  
  <div class="tab-content">
    {tabs.map((tab, index) => (
      <div 
        class={`tab-panel ${index === defaultTab ? 'active' : ''}`}
        data-panel-index={index}
      >
        <div set:html={tab.content} />
      </div>
    ))}
  </div>
  </div>
)}

<style>
  .tab-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    margin: 2rem 0;
  }
  
  .tab-header {
    display: flex;
    position: relative;
    background: #f9fafb;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .tab-button {
    flex: 1;
    padding: 1rem 1.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #6b7280;
    transition: all 0.2s ease;
    position: relative;
    z-index: 1;
  }
  
  .tab-button:hover {
    color: #374151;
    background: rgba(84, 196, 182, 0.05);
  }
  
  .tab-button.active {
    color: #54C4B6;
    font-weight: 600;
  }
  
  .tab-icon {
    font-size: 1.25rem;
  }
  
  .tab-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(to right, #54C4B6, #A8D381);
    transition: transform 0.3s ease;
    width: calc(100% / var(--tab-count, 3));
  }
  
  .tab-content {
    position: relative;
    min-height: 200px;
  }
  
  .tab-panel {
    padding: 2rem;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    transform: translateX(20px);
    transition: all 0.3s ease;
  }
  
  .tab-panel.active {
    opacity: 1;
    visibility: visible;
    position: relative;
    transform: translateX(0);
  }
  
  /* Content styling */
  .tab-panel h3 {
    font-size: 1.25rem;
    font-weight: bold;
    color: #1f2937;
    margin: 0 0 1rem 0;
  }
  
  .tab-panel h4 {
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
    margin: 1.5rem 0 0.75rem 0;
  }
  
  .tab-panel p {
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .tab-panel ul, .tab-panel ol {
    color: #4b5563;
    line-height: 1.6;
    margin: 0 0 1rem 1.5rem;
  }
  
  .tab-panel li {
    margin-bottom: 0.5rem;
  }
  
  .tab-panel blockquote {
    border-left: 4px solid #54C4B6;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  
  .tab-panel code {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.875rem;
    color: #1f2937;
  }
  
  .tab-panel pre {
    background: #1f2937;
    color: #f3f4f6;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
  }
  
  .tab-panel pre code {
    background: transparent;
    padding: 0;
    color: inherit;
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .tab-button {
      font-size: 0.75rem;
      padding: 0.75rem 0.5rem;
    }
    
    .tab-label {
      display: none;
    }
    
    .tab-icon {
      font-size: 1.5rem;
    }
  }
  
  /* PDF Styles */
  .tab-panel-pdf {
    margin: 2rem 0;
  }
  
  .tab-section-pdf {
    margin-bottom: 1.5rem;
    page-break-inside: avoid;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .tab-section-pdf:last-child {
    margin-bottom: 0;
  }
  
  .tab-header-pdf {
    background-color: #f8f9fa;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .tab-icon-pdf {
    font-size: 1.25rem;
  }
  
  .tab-title-pdf {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: #333;
  }
  
  .tab-content-pdf {
    padding: 1.5rem;
    background-color: white;
  }
  
  .tab-content-pdf h3 {
    font-size: 1.125rem;
    color: #333;
    margin-top: 0;
    margin-bottom: 0.75rem;
  }
  
  .tab-content-pdf p {
    font-size: 0.875rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }
  
  .tab-content-pdf ul, .tab-content-pdf ol {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }
  
  .tab-content-pdf li {
    font-size: 0.875rem;
    color: #555;
    margin-bottom: 0.375rem;
  }
</style>

<script define:vars={{ tabId, tabs }}>
  // Skip script in PDF mode
  if (!window.location.pathname.endsWith('.pdf')) {
    document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector(`[data-tab-id="${tabId}"]`);
    if (!container) return;
    
    // Set CSS variable for tab count
    container.style.setProperty('--tab-count', tabs.length);
    
    const buttons = container.querySelectorAll('.tab-button');
    const panels = container.querySelectorAll('.tab-panel');
    const indicator = container.querySelector('.tab-indicator');
    
    buttons.forEach((button, index) => {
      button.addEventListener('click', () => {
        // Update active states
        buttons.forEach(btn => btn.classList.remove('active'));
        panels.forEach(panel => panel.classList.remove('active'));
        
        button.classList.add('active');
        panels[index].classList.add('active');
        
        // Move indicator
        indicator.style.transform = `translateX(${index * 100}%)`;
      });
    });
    });
  }
</script>