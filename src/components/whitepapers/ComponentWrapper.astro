---
export interface Props {
  component: 'StatBox' | 'Timeline' | 'TabPanel' | 'ProgressBar' | 'InteractiveQuiz';
  isPDF?: boolean;
  [key: string]: any;
}

const { component, isPDF = false, ...props } = Astro.props;

// Dynamic imports based on component type and PDF mode
let Component;
if (isPDF) {
  switch (component) {
    case 'StatBox':
      Component = (await import('./pdf/StatBoxPDF.astro')).default;
      break;
    case 'Timeline':
      Component = (await import('./pdf/TimelinePDF.astro')).default;
      break;
    case 'TabPanel':
      Component = (await import('./pdf/TabPanelPDF.astro')).default;
      break;
    case 'ProgressBar':
      Component = (await import('./pdf/ProgressBarPDF.astro')).default;
      break;
    case 'InteractiveQuiz':
      Component = (await import('./pdf/InteractiveQuizPDF.astro')).default;
      break;
  }
} else {
  switch (component) {
    case 'StatBox':
      Component = (await import('./StatBox.astro')).default;
      break;
    case 'Timeline':
      Component = (await import('./Timeline.astro')).default;
      break;
    case 'TabPanel':
      Component = (await import('./TabPanel.astro')).default;
      break;
    case 'ProgressBar':
      Component = (await import('./ProgressBar.astro')).default;
      break;
    case 'InteractiveQuiz':
      Component = (await import('./InteractiveQuiz.astro')).default;
      break;
  }
}
---

<Component {...props} />