---
// This component wraps MDX content and provides PDF-aware component imports
export interface Props {
  isPDF?: boolean;
}

// Extend global type to include our PDF context property
declare global {
  var __PDF_CONTEXT__: boolean;
}

const { isPDF = false } = Astro.props;

// Store context in a global variable that components can access
if (typeof globalThis !== 'undefined') {
  globalThis.__PDF_CONTEXT__ = isPDF;
}
---

