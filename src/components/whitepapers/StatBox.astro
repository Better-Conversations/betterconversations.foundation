---
export interface Props {
  number: string;
  label: string;
  color?: string;
}

const { number, label, color = '#54C4B6' } = Astro.props;
---

<div class="stat-box" style={`--stat-color: ${color}`}>
  <h3>{number}</h3>
  <p>{label}</p>
</div>

<style>
  .stat-box {
    background: linear-gradient(135deg, 
      color-mix(in srgb, var(--stat-color) 20%, transparent),
      color-mix(in srgb, var(--stat-color) 10%, transparent)
    );
    border: 2px solid var(--stat-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    margin: 1rem 0;
  }
  
  .stat-box h3 {
    font-size: 2.5rem;
    margin: 0;
    color: var(--stat-color);
  }
  
  .stat-box p {
    margin: 0;
    color: #666;
  }
</style>