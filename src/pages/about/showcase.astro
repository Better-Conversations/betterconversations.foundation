];

// Sort ambassadors alphabetically by last name
const sortedAmbassadors = [...ambassadors].sort((a, b) => {
  const lastNameA = a.name.split(' ').pop() || '';
  const lastNameB = b.name.split(' ').pop() || '';
  return lastNameA.localeCompare(lastNameB);
});
---

<Layout title="Our Ambassadors - Better Conversations Foundation">
  <HeroSection
    title="Our Ambassadors"
    titleHighlight="Ambassadors"
    description="Dedicated professionals around the world who champion Better Conversations methodology and create lasting impact in their communities."
  />

  <!-- Ambassadors Section -->
  <section class="bg-white relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/5 via-transparent to-[#A8D381]/5"></div>
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">

      <div class="space-y-16">
        {sortedAmbassadors.map((person, index) => (
          <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} items-center gap-8 lg:gap-12 ${index > 0 ? 'pt-16 border-t border-gray-100' : ''}`}>
            <!-- Image Section -->
            <div class="flex-shrink-0 relative">
              <div class="absolute -inset-4 bg-gradient-to-r from-[#54C4B6]/20 to-[#A8D381]/20 rounded-full blur-2xl"></div>
              <div class={`absolute top-3 ${index % 2 === 0 ? 'left-3' : 'right-3'} w-[200px] h-[200px] bg-gradient-to-br from-[#54C4B6] to-[#A8D381] rounded-full opacity-20`}></div>
              {typeof person.image === 'string' ? (
                <img
                  src={person.image}
                  alt={person.name}
                  class="relative rounded-full object-cover block shadow-xl border-4 border-white"
                  style="width: 200px; height: 200px;"
                />
              ) : (
                <Image
                  src={person.image}
                  alt={person.name}
                  width={200}
                  height={200}
                  class="relative rounded-full object-cover block shadow-xl border-4 border-white"
                />
              )}
            </div>

            <!-- Content Section -->
            <div class="flex-1 text-center lg:text-left">
              <div class="mb-4">
                <h3 class="text-3xl font-bold text-gray-900 mb-2">{person.name}</h3>
                <p class="text-lg text-[#54C4B6] font-medium">{person.role}</p>
                <div class={`h-1 w-20 bg-gradient-to-r ${index % 2 === 0 ? 'from-[#54C4B6] to-[#A8D381]' : 'from-[#A8D381] to-[#54C4B6]'} rounded-full mt-4 mx-auto lg:mx-0`}></div>
              </div>

              <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                {person.bio}
              </p>

              <div class="mb-6">
                <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Specialties</h4>
                <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
                  {person.specialties.map((specialty) => (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-[#54C4B6]/10 to-[#A8D381]/10 text-gray-700">
                      {specialty}
                    </span>
                  ))}
                </div>
              </div>

              <div class="flex flex-wrap gap-3 justify-center lg:justify-start items-center">
                <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>{person.location}</span>
                </div>
                {person.linkedin && (
                  <a
                    href={person.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-[#54C4B6] transition-colors"
                    title={`Connect with ${person.name} on LinkedIn`}
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    <span class="text-xs">View Profile</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>