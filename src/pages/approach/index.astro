---
import Layout from '../../layouts/Layout.astro';
import { courseScope, courseInstanceScope } from '../../utils/microdata';
import SectionHeader from '../../components/SectionHeader.astro';
import WaveSeparator from '../../components/WaveSeparator.astro';
import CheckListItem from '../../components/CheckListItem.astro';
---

<Layout title="Course Overview - Better Conversations Foundation">
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-gray-50 to-white">
      <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-8 text-center">
        <div class="inline-flex items-center gap-2 bg-gradient-to-r from-[#54C4B6]/10 to-[#A8D381]/10 px-4 py-2 rounded-full mb-6">
          <div class="w-2 h-2 bg-[#54C4B6] rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-700">Transform Your Communication</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          The Better Conversations
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#54C4B6] to-[#A8D381]">
            Framework
          </span>
        </h1>

        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          A transformative 6-module experiential journey,
          designed to revolutionise how people connect and communicate in organisations.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a href="/get-started" class="bcf-cta-hero-primary">
            Partner With Us
            <svg class="ml-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </a>
          <a href="/approach/open-content" class="bcf-cta-hero-secondary">
            Download Materials (Free)
            <svg class="ml-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </a>
        </div>

        <!-- Stats -->
        <div class="flex justify-center gap-8">
          <div class="text-center">
            <div class="text-2xl font-bold text-[#54C4B6]">6 hrs</div>
            <div class="text-sm text-gray-600">Total Duration</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-[#A8D381]">15+</div>
            <div class="text-sm text-gray-600">Pilot Programs</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-[#54C4B6]">1000s</div>
            <div class="text-sm text-gray-600">Participants</div>
          </div>
        </div>
      </div>
      <WaveSeparator topColor="transparent" bottomColor="white" class="absolute bottom-0 left-0 right-0" />
    </section>

    <!-- Course Journey Timeline -->
    <section class="bg-white relative overflow-hidden" id="modules" itemscope itemtype="https://schema.org/Course">
      <!-- Hidden Course metadata -->
      <meta itemprop="name" content="Better Conversations Course Journey" />
      <meta itemprop="description" content="A transformative 6-module experiential journey, designed to revolutionise how you connect and communicate." />
      <meta itemprop="courseMode" content="online" />
      <meta itemprop="timeRequired" content="PT6H" />
      <span itemprop="provider" itemscope itemtype="https://schema.org/Organisation">
        <meta itemprop="name" content="Better Conversations Foundation" />
        <meta itemprop="url" content="https://betterconversations.foundation" />
      </span>

      <div class="max-w-5xl mx-auto px-6 sm:px-8 lg:px-8">
        <SectionHeader
          heading="Course modules"
          description="Each module builds upon the previous, creating a comprehensive foundation for better conversations"
          class="mb-16"
        />

        <!-- Timeline -->
        <div class="timeline-container flex flex-col gap-8" style="--row-gap: 2rem; --circle-size: 5rem;">
          
          <!-- Module 1 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#54C4B6] to-[#54C4B6] rounded-full shadow-lg border-4 border-[#54C4B6] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">1</span>
              </div>
            </div>
            <!-- Module 1 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />

              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">State</h3>
                    <svg class="w-8 h-8 text-[#54C4B6] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Understanding the State Model</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem class="text-gray-600"><span>Explain the State Model and its importance in conversations</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Describe how you know when you're in red, amber, or green state</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Recognize the impact of state on communication quality</span></CheckListItem>
                    </ul>
                  </div>
                </div>
              </div>
          </div>

          <!-- Module 2 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#54C4B6] to-[#6ACE9D] rounded-full shadow-lg border-4 border-[#5FC9A8] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">2</span>
              </div>
            </div>
            <!-- Module 2 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />
              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">Assumptions</h3>
                    <svg class="w-8 h-8 text-[#54C4B6] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Impact of assumptions on conversations</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem class="text-gray-600"><span>Explain how assumptions affect conversations and outcomes</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Describe the link between state and assumptions</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Identify your own assumptions in real-time interactions</span></CheckListItem>
                    </ul>
                  </div>
                </div>
            </div>
          </div>

          <!-- Module 3 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#54C4B6] to-[#A8D381] rounded-full shadow-lg border-4 border-[#7ED49B] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">3</span>
              </div>
            </div>
            <!-- Module 3 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />
              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">Context</h3>
                    <svg class="w-8 h-8 text-[#7ED49B] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Understanding contextual elements in conversations</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem class="text-gray-600"><span>Describe the elements of context in conversations</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Explain the link between context, assumptions, and state</span></CheckListItem>
                      <CheckListItem class="text-gray-600"><span>Apply contextual awareness to improve communication</span></CheckListItem>
                    </ul>
                  </div>
                </div>
            </div>
          </div>

          <!-- Module 4 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#8CD888] to-[#A8D381] rounded-full shadow-lg border-4 border-[#98D589] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">4</span>
              </div>
            </div>
            <!-- Module 4 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />
              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">Listening with Curiosity</h3>
                    <svg class="w-8 h-8 text-[#A8D381] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Active listening and curious questioning</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem color="green" class="text-gray-600"><span>Demonstrate listening to accept rather than listening to respond</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Practice using questions to understand the other person</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Apply curious questioning techniques</span></CheckListItem>
                    </ul>
                  </div>
                </div>
            </div>
          </div>

          <!-- Module 5 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#A8D381] to-[#A8D381] rounded-full shadow-lg border-4 border-[#A8D381] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">5</span>
              </div>
            </div>
            <!-- Module 5 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />
              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">Intentional Conversations</h3>
                    <svg class="w-8 h-8 text-[#A8D381] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Purposeful dialogue and intentional communication</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem color="green" class="text-gray-600"><span>Describe why intention is different from impact</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Practice preparing for intentional conversations</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Align conversation intentions with desired outcomes</span></CheckListItem>
                    </ul>
                  </div>
                </div>
            </div>
          </div>

          <!-- Module 6 Row -->
          <div class="flex gap-8 module-row">
            <!-- Circle -->
            <div class="flex-shrink-0 timeline-marker flex justify-center" style="padding-top: 0.75rem;">
              <div class="w-20 h-20 bg-gradient-to-br from-[#54C4B6] to-[#A8D381] rounded-full shadow-xl border-4 border-[#A8D381] flex items-center justify-center">
                <span class="text-3xl font-bold text-white">6</span>
              </div>
            </div>
            <!-- Module 6 Content -->
            <div class="flex-1" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
              <meta itemprop="courseMode" content="online" />
              <meta itemprop="timeRequired" content="PT1H" />
              <div class="bg-white rounded-xl p-6 md:p-8 border border-gray-200 hover:border-[#54C4B6] hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                  <div class="mb-2 flex items-center gap-3">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900" itemprop="name">Applications</h3>
                    <svg class="w-8 h-8 text-[#A8D381] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 mb-4 font-medium" itemprop="description">Personal impact and future applications</p>
                  <div class="space-y-3">
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Learning Outcomes</h4>
                    <ul class="space-y-3">
                      <CheckListItem color="green" class="text-gray-600"><span>Describe the personal impact of the course on your communication</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Explain what you would like to have happen now</span></CheckListItem>
                      <CheckListItem color="green" class="text-gray-600"><span>Create an action plan for continuing your learning journey</span></CheckListItem>
                    </ul>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      <WaveSeparator topColor="white" bottomColor="gray" class="absolute bottom-0 left-0 right-0" />
    </section>

    <!-- Course Format Section -->
    <section class="bg-gray-50 relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8">
        <SectionHeader heading="Course format" class="mb-16" />

        <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
          <div class="bcf-card-xl">
            <div class="w-16 h-16 bg-[#54C4B6]/10 rounded-full flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Interactive Learning</h3>
            <p class="text-gray-600 mb-6">
              Sessions blend instruction with hands-on practice, ensuring you can immediately apply what you learn.
            </p>
            <ul class="space-y-3 text-gray-600">
              <CheckListItem><span>Online and interactive format</span></CheckListItem>
              <CheckListItem><span>Mix of instruction and practice</span></CheckListItem>
              <CheckListItem><span>Designed for busy professionals</span></CheckListItem>
            </ul>
          </div>

          <div class="bcf-card-xl">
            <div class="w-16 h-16 bg-[#A8D381]/10 rounded-full flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-[#A8D381]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Technical Requirements</h3>
            <p class="text-gray-600 mb-6">
              Simple setup ensures you can focus on learning, not technology.
            </p>
            <ul class="space-y-3 text-gray-600">
              <CheckListItem color="green"><span>Computer with internet</span></CheckListItem>
              <CheckListItem color="green"><span>Headset with microphone</span></CheckListItem>
              <CheckListItem color="green"><span>Quiet, private space</span></CheckListItem>
            </ul>
          </div>
        </div>
      </div>
      <WaveSeparator topColor="gray" bottomColor="white" class="absolute bottom-0 left-0 right-0" />
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-[#54C4B6] to-[#A8D381] relative overflow-hidden">
      <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white">Ready to bring this to your organisation?</h2>
        <p class="mt-4 text-xl text-white/90 max-w-3xl mx-auto">Transform your organisation's communication culture with deep partnership support or explore our free materials.</p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/get-started" class="bcf-cta-white-on-gradient">
            Explore Partnership
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </a>
          <a href="https://betterconversations.foundation/course/index.html" target="_blank" rel="noopener noreferrer" class="bcf-cta-outline-on-gradient">
            View Documentation
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

.timeline-container{
  /* you already set these inline; keep them consistent with your Tailwind */
  /* --row-gap: 2rem; --circle-size: 5rem; */
  --stroke: 6px;
  --border: 4px;

  /* >>> choose ONE of these presets <<< */
  /* Start/stop at the OUTER edge of the ring (touch outside) */
  --edge-start: calc(var(--border) * 2);
  --edge-end:   calc(var(--border) * 2);

  /* Start/stop at the MIDDLE of the ring 
     --edge-start: calc(var(--border) / 2);
     --edge-end:   calc(var(--border) / 2); */

  /* Start/stop at the INNER edge of the ring (touch inside)
  --edge-start: 0px;
  --edge-end:   0px; */
}

.module-row { position: relative; }

.timeline-marker{
  position: relative;
  width: var(--circle-size);      /* keep the line centred on the circle */
  display: flex; justify-content: center;
  z-index: 1;
}

.module-row:not(:last-child) .timeline-marker::after{
  content:"";
  position:absolute;
  left: calc(var(--circle-size) / 2);
  transform: translateX(-50%);

  /* start below current circle's centre by the edge you selected */
  top: calc(var(--circle-size) + var(--edge-start));

