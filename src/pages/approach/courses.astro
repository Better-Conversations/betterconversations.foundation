---
import Layout from '../../layouts/Layout.astro';
import { courseScope, courseInstanceScope } from '../../utils/microdata';
---

<Layout title="Course Overview - Better Conversations Foundation">
  <main>
    <!-- Hero Section with Interactive Course Path -->
    <section class="relative bg-gradient-to-br from-gray-50 to-white py-16 lg:py-20 overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
        <!-- Mobile/Tablet Hero -->
        <div class="lg:hidden">
          <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 bg-gradient-to-r from-[#54C4B6]/10 to-[#A8D381]/10 px-4 py-2 rounded-full mb-6">
              <div class="w-2 h-2 bg-[#54C4B6] rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-700">Transform Your Communication</span>
            </div>
            
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              Better Conversations
              <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#54C4B6] to-[#A8D381]">
                Course Journey
              </span>
            </h1>
            
            <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
              Embark on a transformative 5-module journey through Clean Language principles, 
              designed to revolutionise how you connect and communicate.
            </p>

            <!-- Mobile Journey Preview -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 mb-8">
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm font-medium text-gray-600">Your Learning Path</span>
                <span class="text-sm text-[#54C4B6] font-medium">6 Modules</span>
              </div>
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full h-1 bg-gradient-to-r from-[#54C4B6] to-[#A8D381] rounded-full"></div>
                </div>
                <div class="relative flex justify-between">
                  <div class="w-8 h-8 bg-white border-2 border-[#54C4B6] rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-[#54C4B6]">1</span>
                  </div>
                  <div class="w-8 h-8 bg-white border-2 border-[#54C4B6]/80 rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-[#54C4B6]">2</span>
                  </div>
                  <div class="w-8 h-8 bg-white border-2 border-[#54C4B6]/60 rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-[#54C4B6]">3</span>
                  </div>
                  <div class="w-8 h-8 bg-white border-2 border-[#A8D381]/60 rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-[#A8D381]">4</span>
                  </div>
                  <div class="w-8 h-8 bg-white border-2 border-[#A8D381]/80 rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-[#A8D381]">5</span>
                  </div>
                  <div class="w-8 h-8 bg-gradient-to-br from-[#54C4B6] to-[#A8D381] rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-white">6</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
              <a href="/get-started/attend-course" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-full text-white bg-gradient-to-r from-[#54C4B6] to-[#A8D381] hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                Start Your Journey
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
              <a href="#modules" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-full text-gray-700 bg-white border-2 border-gray-200 hover:border-[#54C4B6] transform hover:scale-105 transition-all duration-300">
                Explore Modules
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </a>
            </div>

            <!-- Mini Stats -->
            <div class="flex justify-center gap-6">
              <div class="text-center">
                <div class="text-xl font-bold text-[#54C4B6]">6 hrs</div>
                <div class="text-xs text-gray-600">Total</div>
              </div>
              <div class="text-center">
                <div class="text-xl font-bold text-[#A8D381]">15+</div>
                <div class="text-xs text-gray-600">Pilots</div>
              </div>
              <div class="text-center">
                <div class="text-xl font-bold text-[#54C4B6]">1000s</div>
                <div class="text-xs text-gray-600">Learners</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Desktop Hero -->
        <div class="hidden lg:grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="relative z-10">
            <div class="inline-flex items-center gap-2 bg-gradient-to-r from-[#54C4B6]/10 to-[#A8D381]/10 px-4 py-2 rounded-full mb-6">
              <div class="w-2 h-2 bg-[#54C4B6] rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-700">Transform Your Communication</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
              Better Conversations
              <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#54C4B6] to-[#A8D381]">
                Course Journey
              </span>
            </h1>
            
            <p class="text-xl text-gray-600 mb-8">
              Embark on a transformative 5-module journey through Clean Language principles, 
              designed to revolutionise how you connect and communicate.
            </p>

            <div class="mb-12">
              <a href="/get-started/attend-course" class="magnetic-button inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-gradient-to-r from-[#54C4B6] to-[#A8D381] hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                Start Your Journey
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>

            <!-- Mini Stats -->
            <div class="flex gap-8">
              <div class="text-center">
                <div class="text-2xl font-bold text-[#54C4B6]">6 hrs</div>
                <div class="text-sm text-gray-600">Total Duration</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-[#A8D381]">15+</div>
                <div class="text-sm text-gray-600">Pilot Programs</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-[#54C4B6]">1000s</div>
                <div class="text-sm text-gray-600">Participants</div>
              </div>
            </div>
          </div>

          <!-- Right Interactive Path (Desktop Only) -->
          <div class="relative h-[600px] lg:h-[700px]">
            <!-- Course Path SVG -->
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 600" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- Animated Path -->
              <path id="course-path" d="M200 50 Q100 150 200 250 T200 450 Q300 500 200 600" 
                stroke="url(#path-gradient)" 
                stroke-width="3" 
                fill="none"
                stroke-dasharray="10 5"
                opacity="0.3"
              />
              <defs>
                <linearGradient id="path-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" stop-color="#54C4B6"/>
                  <stop offset="100%" stop-color="#A8D381"/>
                </linearGradient>
              </defs>
            </svg>

            <!-- Module Nodes -->
            <div class="absolute top-[50px] left-1/2 -translate-x-1/2 module-node" data-module="1">
              <div class="w-20 h-20 bg-white rounded-full shadow-lg border-4 border-[#54C4B6] flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-[#54C4B6]">1</span>
                <div class="absolute -right-20 top-1/2 -translate-y-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  State
                </div>
              </div>
            </div>

            <div class="absolute top-[200px] left-[30%] module-node" data-module="2">
              <div class="w-20 h-20 bg-white rounded-full shadow-lg border-4 border-[#54C4B6]/80 flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-[#54C4B6]">2</span>
                <div class="absolute -left-24 top-1/2 -translate-y-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  Assumptions
                </div>
              </div>
            </div>

            <div class="absolute top-[350px] right-[30%] module-node" data-module="3">
              <div class="w-20 h-20 bg-white rounded-full shadow-lg border-4 border-[#54C4B6]/60 flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-[#54C4B6]">3</span>
                <div class="absolute -right-20 top-1/2 -translate-y-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  Context
                </div>
              </div>
            </div>

            <div class="absolute bottom-[250px] left-[25%] module-node" data-module="4">
              <div class="w-20 h-20 bg-white rounded-full shadow-lg border-4 border-[#A8D381]/80 flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-[#A8D381]">4</span>
                <div class="absolute -left-32 top-1/2 -translate-y-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  Listening with Curiosity
                </div>
              </div>
            </div>

            <div class="absolute bottom-[200px] right-[25%] module-node" data-module="5">
              <div class="w-20 h-20 bg-white rounded-full shadow-lg border-4 border-[#A8D381] flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-[#A8D381]">5</span>
                <div class="absolute -right-28 top-1/2 -translate-y-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  Intentional Conversations
                </div>
              </div>
            </div>

            <div class="absolute bottom-[50px] left-1/2 -translate-x-1/2 module-node" data-module="6">
              <div class="w-24 h-24 bg-gradient-to-br from-[#54C4B6] to-[#A8D381] rounded-full shadow-xl flex items-center justify-center cursor-pointer transform transition-all hover:scale-110 relative">
                <span class="text-2xl font-bold text-white">6</span>
                <div class="absolute -bottom-10 left-1/2 -translate-x-1/2 opacity-0 transition-opacity whitespace-nowrap bg-gray-900 text-white px-3 py-1 rounded text-sm">
                  Applications
                </div>
              </div>
            </div>

            <!-- Floating Elements -->
            <div class="absolute top-20 right-10 w-4 h-4 bg-[#54C4B6] rounded-full animate-float"></div>
            <div class="absolute top-40 left-10 w-3 h-3 bg-[#A8D381] rounded-full animate-float-delayed"></div>
            <div class="absolute bottom-40 right-20 w-5 h-5 bg-[#54C4B6]/50 rounded-full animate-float"></div>
            
            <!-- Connection Lines Animation -->
            <svg class="absolute inset-0 w-full h-full pointer-events-none">
              <line class="connection-line" x1="200" y1="130" x2="120" y2="250" stroke="#54C4B6" stroke-width="2" opacity="0"/>
              <line class="connection-line" x1="120" y1="250" x2="280" y2="400" stroke="#54C4B6" stroke-width="2" opacity="0"/>
              <line class="connection-line" x1="280" y1="400" x2="100" y2="500" stroke="#A8D381" stroke-width="2" opacity="0"/>
              <line class="connection-line" x1="100" y1="500" x2="300" y2="500" stroke="#A8D381" stroke-width="2" opacity="0"/>
              <line class="connection-line" x1="300" y1="500" x2="200" y2="650" stroke="#A8D381" stroke-width="2" opacity="0"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-pattern"></div>
      </div>
    </section>

    <!-- Wave Separator -->
    <div class="relative -mt-1">
      <svg class="w-full h-16" viewBox="0 0 1440 48" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 48L60 45.3C120 42.7 240 37.3 360 32C480 26.7 600 21.3 720 24C840 26.7 960 37.3 1080 40C1200 42.7 1320 37.3 1380 34.7L1440 32V0H1380C1320 0 1200 0 1080 0C960 0 840 0 720 0C600 0 480 0 360 0C240 0 120 0 60 0H0V48Z" fill="url(#gradient-wave)"/>
        <defs>
          <linearGradient id="gradient-wave" x1="0" y1="0" x2="1440" y2="0">
            <stop offset="0%" stop-color="#54C4B6" stop-opacity="0.1"/>
            <stop offset="100%" stop-color="#A8D381" stop-opacity="0.1"/>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- Course Structure Section -->
    <section class="py-20" id="modules" itemscope itemtype="https://schema.org/Course">
      <!-- Hidden Course metadata -->
      <meta itemprop="name" content="Better Conversations Course Journey" />
      <meta itemprop="description" content="A transformative 6-module journey through Clean Language principles, designed to revolutionise how you connect and communicate." />
      <meta itemprop="courseMode" content="online" />
      <meta itemprop="timeRequired" content="PT6H" />
      <span itemprop="provider" itemscope itemtype="https://schema.org/Organization">
        <meta itemprop="name" content="Better Conversations Foundation" />
        <meta itemprop="url" content="https://betterconversations.foundation" />
      </span>

      <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Course Modules</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Each module builds upon the previous, creating a comprehensive foundation for better conversations
          </p>
        </div>
        
        <!-- Desktop Module Cards -->
        <div class="hidden lg:grid lg:grid-cols-6 lg:gap-4 relative">
          <!-- Connecting Line -->
          <div class="absolute top-16 left-0 right-0 h-0.5 bg-gradient-to-r from-[#54C4B6] to-[#A8D381] z-0"></div>
          
          <!-- Module 1 -->
          <div class="module-card-vertical relative group" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
            <meta itemprop="courseMode" content="online" />
            <meta itemprop="timeRequired" content="PT1H" />
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 h-full">
              <div class="relative z-10 bg-white rounded-full w-12 h-12 mx-auto -mt-10 mb-4 border-4 border-[#54C4B6] flex items-center justify-center">
                <span class="text-lg font-bold text-[#54C4B6]">1</span>
              </div>
              <div class="text-center">
                <h3 class="text-xl font-bold text-gray-900 mb-2" itemprop="name">State</h3>
                <p class="text-sm text-gray-600 mb-4" itemprop="description">The State Model</p>
                <div class="space-y-2 text-left">
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Explain the State Model</span>
                  </div>
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Red, amber, green states</span>
                  </div>
                </div>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <span class="text-xs text-gray-500">1 hour</span>
                </div>
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform -z-10"></div>
          </div>

          <!-- Module 2 -->
          <div class="module-card-vertical relative group" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
            <meta itemprop="courseMode" content="online" />
            <meta itemprop="timeRequired" content="PT1H" />
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 h-full">
              <div class="relative z-10 bg-white rounded-full w-12 h-12 mx-auto -mt-10 mb-4 border-4 border-[#54C4B6]/80 flex items-center justify-center">
                <span class="text-lg font-bold text-[#54C4B6]">2</span>
              </div>
              <div class="text-center">
                <h3 class="text-xl font-bold text-gray-900 mb-2" itemprop="name">Assumptions</h3>
                <p class="text-sm text-gray-600 mb-4" itemprop="description">Impact on conversations</p>
                <div class="space-y-2 text-left">
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Effects on conversations</span>
                  </div>
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Link to state</span>
                  </div>
                </div>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <span class="text-xs text-gray-500">1 hour</span>
                </div>
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-2xl transform -rotate-3 group-hover:-rotate-6 transition-transform -z-10"></div>
          </div>

          <!-- Module 3 -->
          <div class="module-card-vertical relative group" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
            <meta itemprop="courseMode" content="online" />
            <meta itemprop="timeRequired" content="PT1H" />
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 h-full">
              <div class="relative z-10 bg-white rounded-full w-12 h-12 mx-auto -mt-10 mb-4 border-4 border-[#54C4B6]/60 flex items-center justify-center">
                <span class="text-lg font-bold text-[#54C4B6]">3</span>
              </div>
              <div class="text-center">
                <h3 class="text-xl font-bold text-gray-900 mb-2" itemprop="name">Context</h3>
                <p class="text-sm text-gray-600 mb-4" itemprop="description">Elements in conversations</p>
                <div class="space-y-2 text-left">
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Elements of context</span>
                  </div>
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#54C4B6] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Links to assumptions & state</span>
                  </div>
                </div>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <span class="text-xs text-gray-500">1 hour</span>
                </div>
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform -z-10"></div>
          </div>

          <!-- Module 4 -->
          <div class="module-card-vertical relative group" itemprop="hasCourseInstance" itemscope itemtype="https://schema.org/CourseInstance">
            <meta itemprop="courseMode" content="online" />
            <meta itemprop="timeRequired" content="PT1H" />
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 h-full">
              <div class="relative z-10 bg-white rounded-full w-12 h-12 mx-auto -mt-10 mb-4 border-4 border-[#A8D381]/80 flex items-center justify-center">
                <span class="text-lg font-bold text-[#A8D381]">4</span>
              </div>
              <div class="text-center">
                <h3 class="text-lg font-bold text-gray-900 mb-1" itemprop="name">Listening with Curiosity</h3>
                <p class="text-xs text-gray-600 mb-3" itemprop="description">Active listening</p>
                <div class="space-y-2 text-left">
                  <div class="text-xs text-gray-500 flex items-start">
                    <svg class="w-3 h-3 text-[#A8D381] mt-0.5 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>Listening to accept</span>
