<script>
  // Magnetic button effect
  document.querySelectorAll('.magnetic-button').forEach(button => {
    button.addEventListener('mousemove', (e) => {
      const rect = button.getBoundingClientRect();
      const x = (e as MouseEvent).clientX - rect.left - rect.width / 2;
      const y = (e as MouseEvent).clientY - rect.top - rect.height / 2;
      
      (button as HTMLElement).style.transform = `translate(${x * 0.1}px, ${y * 0.1}px) scale(1.05)`;
    });
    
    button.addEventListener('mouseleave', () => {
      (button as HTMLElement).style.transform = 'translate(0, 0) scale(1)';
    });
  });

  // Animate module cards on scroll
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          (entry.target as HTMLElement).style.opacity = '1';
          (entry.target as HTMLElement).style.transform = 'translateY(0)';
        }, index * 100);
      }
    });
  }, observerOptions);

  // Observe all module cards
  document.querySelectorAll('.module-card').forEach((card, index) => {
    (card as HTMLElement).style.opacity = '0';
    (card as HTMLElement).style.transform = 'translateY(20px)';
    (card as HTMLElement).style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(card);
  });

  // Interactive Course Journey
  const moduleNodes = document.querySelectorAll('.module-node');
  const connectionLines = document.querySelectorAll('.connection-line');
  
  // Add click interaction to module nodes
  moduleNodes.forEach((node, index) => {
    node.addEventListener('click', () => {
      // Remove active class from all nodes
      moduleNodes.forEach(n => n.classList.remove('active'));
      // Add active class to clicked node
      node.classList.add('active');
      
      // Animate connection lines up to this module
      connectionLines.forEach((line, lineIndex) => {
        if (lineIndex < index) {
          line.classList.add('active');
        } else {
          line.classList.remove('active');
        }
      });
      
      // Scroll to corresponding module card
      const moduleCards = document.querySelectorAll('.module-card-vertical, .module-card');
      if (moduleCards[index]) {
        moduleCards[index].scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    });
  });
  
  // Add hover effects for module tooltips
  moduleNodes.forEach(node => {
    const tooltip = node.querySelector('div > div');
    
    node.addEventListener('mouseenter', () => {
      if (tooltip) {
        (tooltip as HTMLElement).style.opacity = '1';
      }
    });
    
    node.addEventListener('mouseleave', () => {
      if (tooltip) {
        (tooltip as HTMLElement).style.opacity = '0';
      }
    });
  });
</script>