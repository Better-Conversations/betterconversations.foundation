---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Book a Call - Better Conversations Foundation">
  <section class="relative overflow-hidden bg-gradient-to-br from-white via-gray-50/50 to-white py-16 lg:py-20">
    <div class="relative max-w-7xl mx-auto px-6 sm:px-8 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Book a <span class="bg-gradient-to-r from-[#54C4B6] to-[#A8D381] bg-clip-text text-transparent">Conversation</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Choose who you'd like to speak with
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Chandima and Simon -->
        <a href="/booking/both" class="group block bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl hover:border-[#54C4B6]/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[#54C4B6]/10 to-[#A8D381]/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-[#54C4B6] transition-colors">Chandima and Simon</h2>
          <p class="text-gray-600 mb-4">Book a call with both of us. Choose from 30, 45, or 60 minute sessions.</p>
          <span class="inline-flex items-center text-[#54C4B6] font-medium">
            Book now
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>

        <!-- Simon (Friends) -->
        <a href="/booking/simon-friends" class="group block bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl hover:border-[#A8D381]/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[#A8D381]/10 to-[#54C4B6]/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-[#A8D381]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-[#A8D381] transition-colors">Simon</h2>
          <p class="text-gray-600 mb-4">Book a one-on-one call with Simon.</p>
          <span class="inline-flex items-center text-[#A8D381] font-medium">
            Book now
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</Layout>
