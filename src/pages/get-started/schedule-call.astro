---
// Redirect to contact page with schedule tab active
const redirectUrl = '/about/contact?tab=call';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="refresh" content="0; url=/about/contact?tab=call">
  <title>Redirecting to Contact - Better Conversations Foundation</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #54C4B6 0%, #A8D381 100%);
    }
    .redirect-message {
      text-align: center;
      color: white;
      padding: 2rem;
    }
    .spinner {
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top: 3px solid white;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 1rem auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
  <script is:inline>
    // JavaScript redirect as fallback
    window.location.href = '/about/contact?tab=call';
  </script>
</head>
<body>
  <div class="redirect-message">
    <div class="spinner"></div>
    <h1>Redirecting to Contact...</h1>
    <p>If you are not redirected automatically, <a href="/about/contact?tab=call" style="color: white; text-decoration: underline;">click here</a>.</p>
  </div>
</body>
</html>
