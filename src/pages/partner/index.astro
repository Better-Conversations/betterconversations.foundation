---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';
---

<Layout title="Partner With Us - Better Conversations Foundation">
  <style>
    /* Rotating partnership icons */
    @keyframes rotateIn {
      0% { transform: rotate(0deg) scale(0.8); opacity: 0; }
      100% { transform: rotate(360deg) scale(1); opacity: 1; }
    }
    
    .partner-icon {
      animation: rotateIn 1s ease-out forwards;
    }
    
    /* Connecting dots animation */
    @keyframes connectDots {
      0% { width: 0; opacity: 0; }
      100% { width: 100%; opacity: 1; }
    }
    
    .connection-line {
      height: 2px;
      background: linear-gradient(90deg, #54C4B6 0%, #A8D381 100%);
      animation: connectDots 1.5s ease-out forwards;
    }
    
    /* Hover lift effect */
    .partner-card {
      transition: all 0.3s ease;
    }
    
    .partner-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }
    
    /* Flip card animation */
    @keyframes flipIn {
      0% {
        transform: rotateY(-90deg);
        opacity: 0;
      }
      100% {
        transform: rotateY(0);
        opacity: 1;
      }
    }
    
    .flip-card {
      perspective: 1000px;
      animation: flipIn 0.8s ease-out forwards;
      opacity: 0;
    }
    
    /* Staggered reveal */
    .reveal-item {
      opacity: 0;
      transform: translateX(-20px);
      transition: all 0.6s ease-out;
    }
    
    .reveal-item.revealed {
      opacity: 1;
      transform: translateX(0);
    }
    
    /* Floating icons */
    @keyframes floatIcon {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .float-icon {
      animation: floatIcon 3s ease-in-out infinite;
    }
  </style>

  <HeroSection 
    title="Partner With Us"
    titleHighlight="Partner"
    description="Join us in transforming how organizations communicate and connect."
  />

  <!-- Partnership Overview Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">An Open-Source Approach to Better Conversations</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          We provide free, Creative Commons licensed materials and support to help you deliver 
          Better Conversations training in your organization or community.
        </p>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Our collaborative model enables non-profits, charities, social enterprises, and values-aligned 
          organizations to spread communication skills that transform workplaces and communities.
        </p>
      </div>

      <!-- Partnership Types Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        <a href="/partner/organizations" class="partner-card bg-white rounded-xl p-6 border border-gray-200 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-full flex items-center justify-center mx-auto mb-4 partner-icon">
