		<!-- Section Content -->
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
			<div class="text-center">
				<h2 class="text-base text-[#54C4B6] font-semibold tracking-wide uppercase">Who We Are</h2>
				<p class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl">
