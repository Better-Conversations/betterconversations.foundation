---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Better Conversations Foundation">
	<style>
		/* Floating animation */
		@keyframes float {
			0%, 100% { transform: translateY(0) translateX(0); }
			33% { transform: translateY(-10px) translateX(5px); }
			66% { transform: translateY(5px) translateX(-5px); }
		}
		
		.floating {
			animation: float 6s ease-in-out infinite;
		}
		
		/* Morphing blob */
		@keyframes morph {
			0%, 100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
			50% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
		}
		
		.morphing {
			animation: morph 8s ease-in-out infinite;
		}
		
		/* Gradient animation */
		@keyframes gradient-shift {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}
		
		.animated-gradient {
			background-size: 200% 200%;
			animation: gradient-shift 10s ease infinite;
		}
		
		/* Pulse effect for circles */
		@keyframes pulse {
			0%, 100% { transform: scale(1); opacity: 0.3; }
			50% { transform: scale(1.2); opacity: 0.6; }
		}
		
		.pulse-circle {
			animation: pulse 4s ease-in-out infinite;
		}
		
		/* Connecting line animation */
		@keyframes drawLine {
			0% { stroke-dashoffset: 200; opacity: 0; }
			50% { opacity: 0.3; }
			100% { stroke-dashoffset: 0; opacity: 0.3; }
		}
		
		.connecting-line {
			stroke-dasharray: 200;
			stroke-dashoffset: 200;
			animation: drawLine 3s ease-out forwards;
		}
		
		/* Ripple button effect */
		.ripple-button {
			position: relative;
			overflow: hidden;
			transform: translateZ(0);
		}
		
		.ripple-button::before {
			content: '';
			position: absolute;
			top: 50%;
			left: 50%;
			width: 0;
			height: 0;
			border-radius: 50%;
			background: rgba(255, 255, 255, 0.5);
			transform: translate(-50%, -50%);
			transition: width 0.6s, height 0.6s;
		}
		
		.ripple-button:hover::before {
			width: 300px;
			height: 300px;
		}
	</style>
	
	<!-- Hero Section -->
	<section class="relative overflow-hidden bg-gradient-to-b from-white via-gray-50 to-white">
		<!-- Animated gradient background -->
		<div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/30 via-transparent to-[#A8D381]/30 animated-gradient"></div>
		
		<!-- Floating particles -->
		<div class="absolute inset-0 pointer-events-none">
			<div class="floating absolute top-20 left-[10%] w-4 h-4 bg-[#54C4B6] rounded-full opacity-20"></div>
			<div class="floating absolute top-40 right-[15%] w-6 h-6 bg-[#A8D381] rounded-full opacity-20" style="animation-delay: 2s;"></div>
			<div class="floating absolute bottom-40 left-[20%] w-5 h-5 bg-[#54C4B6] rounded-full opacity-20" style="animation-delay: 4s;"></div>
			<div class="floating absolute bottom-20 right-[25%] w-4 h-4 bg-[#A8D381] rounded-full opacity-20" style="animation-delay: 1s;"></div>
			
			<!-- Pulse circles with IDs for connection -->
			<div id="left-dot-1" class="pulse-circle absolute top-[30%] left-[5%] w-8 h-8 bg-[#54C4B6] rounded-full"></div>
			<div id="right-dot-1" class="pulse-circle absolute top-[60%] right-[10%] w-10 h-10 bg-[#A8D381] rounded-full" style="animation-delay: 2s;"></div>
			<div id="left-dot-2" class="pulse-circle absolute bottom-[25%] left-[15%] w-6 h-6 bg-[#54C4B6] rounded-full" style="animation-delay: 1s;"></div>
			
			<!-- Connecting lines SVG -->
			<svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: -1;">
				<!-- Left side connection -->
				<line class="connecting-line" x1="5%" y1="30%" x2="15%" y2="75%" stroke="#54C4B6" stroke-width="1" opacity="0.3" style="animation-delay: 0.5s;" />
			</svg>
		</div>
		
		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 lg:py-48">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
					Open the door to <span class="text-[#54C4B6] relative">
						better communication
						<svg class="absolute -bottom-2 left-0 w-full" height="8" viewBox="0 0 200 8" preserveAspectRatio="none">
							<path d="M0 7 Q50 0 100 3 T200 7" stroke="#54C4B6" stroke-width="2" fill="none" opacity="0.5"/>
						</svg>
					</span>
				</h1>
				<p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
					Nice to meet you. We are the Better Conversations Foundation. We help people 
					<span class="text-[#54C4B6] font-semibold">connect</span> 
					on a human level.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="#join" class="ripple-button inline-flex items-center px-8 py-4 border border-transparent text-base font-medium rounded-full text-white bg-gradient-to-r from-[#54C4B6] to-[#A8D381] hover:shadow-xl transform hover:scale-105 transition-all duration-300">
						Join the Foundation
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
						</svg>
					</a>
					<a href="#course" class="group inline-flex items-center px-8 py-4 border-2 border-gray-300 text-base font-medium rounded-full text-gray-700 bg-white hover:border-[#54C4B6] hover:text-[#54C4B6] transition-all duration-300">
						Attend a Course
						<svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
		
		<!-- Additional pulse circles for right side -->
		<div class="absolute inset-0 pointer-events-none">
			<div id="right-dot-2" class="pulse-circle absolute top-[25%] right-[8%] w-7 h-7 bg-[#A8D381] rounded-full" style="animation-delay: 0.5s;"></div>
			<div id="right-dot-3" class="pulse-circle absolute bottom-[35%] right-[12%] w-8 h-8 bg-[#A8D381] rounded-full" style="animation-delay: 1.5s;"></div>
			
			<!-- Right side connections SVG -->
			<svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: -1;">
				<!-- Right side connections -->
				<line class="connecting-line" x1="92%" y1="25%" x2="90%" y2="60%" stroke="#A8D381" stroke-width="1" opacity="0.3" style="animation-delay: 1s;" />
				<line class="connecting-line" x1="90%" y1="60%" x2="88%" y2="65%" stroke="#A8D381" stroke-width="1" opacity="0.3" style="animation-delay: 1.5s;" />
			</svg>
		</div>
		
		<!-- Morphing decorative elements -->
		<div class="absolute top-10 right-0 w-96 h-96 bg-[#A8D381]/20 rounded-full blur-3xl morphing"></div>
		<div class="absolute bottom-10 left-0 w-96 h-96 bg-[#54C4B6]/20 rounded-full blur-3xl morphing" style="animation-delay: 4s;"></div>
		<div class="absolute bottom-0 right-20 w-72 h-72 bg-[#A8D381]/15 rounded-full blur-2xl morphing" style="animation-delay: 2s;"></div>
		<!-- Wave separator -->
		<div class="absolute bottom-0 left-0 right-0">
			<svg class="w-full h-16 text-white" preserveAspectRatio="none" viewBox="0 0 1440 54" fill="currentColor">
				<path d="M0,22L60,27.2C120,32,240,43,360,44.7C480,46,600,38,720,30.3C840,22,960,14,1080,16.3C1200,19,1320,32,1380,38.5L1440,45L1440,54L1380,54C1320,54,1200,54,1080,54C960,54,840,54,720,54C600,54,480,54,360,54C240,54,120,54,60,54L0,54Z"></path>
			</svg>
		</div>
	</section>

	<!-- About Section -->
	<section class="py-16 lg:py-24 bg-white relative overflow-hidden">

		<!-- Section Content -->
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
			<div class="lg:text-center">
				<h2 class="text-base text-[#54C4B6] font-semibold tracking-wide uppercase">About BCF</h2>
				<p class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl">
					Making a big difference doesn't take much
				</p>
				<p class="mt-4 max-w-2xl text-xl text-gray-600 lg:mx-auto">
					The BCF is dedicated to helping people around the world have Better Conversations in their professional and private lives. It doesn't take much to make a big difference in the quality of your life.
				</p>
			</div>

			<!-- Features Grid -->
			<div class="mt-16">
				<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
					<div class="text-center">
						<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6] mx-auto">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
							</svg>
						</div>
						<h3 class="mt-4 text-lg font-medium text-gray-900">Free Course Materials</h3>
						<p class="mt-2 text-base text-gray-600">
							Download flight plans and course materials under Creative Commons license
						</p>
					</div>

					<div class="text-center">
						<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6] mx-auto">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
							</svg>
						</div>
						<h3 class="mt-4 text-lg font-medium text-gray-900">Professional Community</h3>
						<p class="mt-2 text-base text-gray-600">
							Join trainers, coaches, managers, and L&D professionals worldwide
						</p>
					</div>

					<div class="text-center">
						<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6] mx-auto">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
							</svg>
						</div>
						<h3 class="mt-4 text-lg font-medium text-gray-900">Clean Language Methods</h3>
						<p class="mt-2 text-base text-gray-600">
							Learn Clean Language and Emergent Knowledge techniques for business
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Course Download CTA -->
	<section class="py-12 bg-[#54C4B6]/10">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="lg:flex lg:items-center lg:justify-between">
				<div>
					<h2 class="text-2xl font-bold text-gray-900">Better Conversations Course</h2>
					<p class="mt-1 text-lg text-gray-600">
						Free to download and incorporate into your work
					</p>
				</div>
				<div class="mt-4 lg:mt-0 lg:flex lg:gap-4">
					<a href="/download/flight-plans" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-[#54C4B6] hover:bg-[#54C4B6]/90 transition-colors">
						Download Flight Plans
					</a>
					<a href="/members/course-docs" class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
						Course Documentation
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Joining Section -->
	<section id="join" class="py-16 lg:py-24 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
				<div>
					<h2 class="text-3xl font-bold text-gray-900">Joining the Foundation</h2>
					<p class="mt-4 text-lg text-gray-600">
						Our community of fellow professionals support each other delivering the course, and also the use of Clean Language and Emergent Knowledge in business settings.
					</p>
					<p class="mt-4 text-lg text-gray-600">
						If you would like to be considered for membership, please either:
					</p>
					<ul class="mt-4 space-y-3">
						<li class="flex items-start">
							<span class="flex-shrink-0 h-6 w-6 text-[#54C4B6]">
								<svg fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
							</span>
							<span class="ml-3 text-gray-600">Ask an existing member to sponsor you through the bettercourses.org application</span>
						</li>
						<li class="flex items-start">
							<span class="flex-shrink-0 h-6 w-6 text-[#54C4B6]">
								<svg fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
							</span>
							<span class="ml-3 text-gray-600">Arrange a call to see if we're a good fit for each other</span>
						</li>
					</ul>
					<div class="mt-8">
						<a href="/schedule-call" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-[#54C4B6] hover:bg-[#54C4B6]/90 transition-colors">
							Schedule a Call
						</a>
					</div>
				</div>
				<div class="mt-10 lg:mt-0">
					<div class="bg-gradient-to-br from-[#54C4B6]/10 to-[#A8D381]/10 rounded-2xl p-8">
						<h3 class="text-xl font-semibold text-gray-900 mb-4">Member Benefits</h3>
						<ul class="space-y-3">
							<li class="flex items-center text-gray-700">
								<svg class="h-5 w-5 text-[#A8D381] mr-3" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
								</svg>
								Access to course documentation
							</li>
							<li class="flex items-center text-gray-700">
								<svg class="h-5 w-5 text-[#A8D381] mr-3" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
								</svg>
								Private community access
							</li>
							<li class="flex items-center text-gray-700">
								<svg class="h-5 w-5 text-[#A8D381] mr-3" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
								</svg>
								Professional support network
							</li>
							<li class="flex items-center text-gray-700">
								<svg class="h-5 w-5 text-[#A8D381] mr-3" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
								</svg>
								Clean Language resources
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Attending a Course Section -->
	<section id="course" class="py-16 lg:py-24 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h2 class="text-3xl font-bold text-gray-900">Attending a Course</h2>
				<p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
					If you would like to attend Better Conversations, there are many people providing both private and public courses.
				</p>
			</div>

			<div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
				<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
					<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6]">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Public Courses</h3>
					<p class="mt-2 text-base text-gray-600">
						Join scheduled public courses with other professionals
					</p>
				</div>

				<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
					<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6]">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Private Training</h3>
					<p class="mt-2 text-base text-gray-600">
						Arrange custom training for your organization
					</p>
				</div>

				<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
					<div class="flex items-center justify-center h-12 w-12 rounded-md bg-[#54C4B6]/10 text-[#54C4B6]">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Partner Organizations</h3>
					<p class="mt-2 text-base text-gray-600">
						Free courses for members of partner nonprofits with referral links
					</p>
				</div>
			</div>

			<div class="mt-12 bg-[#A8D381]/10 rounded-lg p-6 text-center">
				<p class="text-gray-700">
					We work in partnership with other nonprofits whose members can attend the course for free and are pre-approved for membership. If you have a referral link from a partner organization and can't find it, get in touch with us using the support icon at the bottom right of this screen.
				</p>
			</div>
		</div>
	</section>

	<!-- Final CTA -->
	<section class="py-16 bg-gradient-to-r from-[#54C4B6] to-[#A8D381]">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl font-bold text-white">Ready to have better conversations?</h2>
			<p class="mt-4 text-xl text-white/90 max-w-2xl mx-auto">
				If you want to know more, or if you want to get involved, please get in touch with us.
			</p>
			<div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/contact" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-[#54C4B6] bg-white hover:bg-gray-50 transition-colors">
					Get in Touch
				</a>
				<a href="/about" class="inline-flex items-center px-6 py-3 border border-white text-base font-medium rounded-md text-white hover:bg-white/10 transition-colors">
					Learn More About Us
				</a>
			</div>
		</div>
	</section>
</Layout>