---
import Layout from '../layouts/Layout.astro';
import { generateMetaProperties } from '../utils/metadata';
import { siteConfig } from '../data/siteConfig';
import SectionHeader from '../components/SectionHeader.astro';
import WaveSeparator from '../components/WaveSeparator.astro';
import CheckListItem from '../components/CheckListItem.astro';

// Generate enhanced metadata for homepage
const homeMetadata = generateMetaProperties('/');
---

<Layout 
  title={homeMetadata.title}
  description={homeMetadata.description}
  keywords={homeMetadata.keywords}
  schemaType="WebPage"
>
	<style>
		/* Floating animation */
		@keyframes float {
			0%, 100% { transform: translateY(0) translateX(0); }
			33% { transform: translateY(-10px) translateX(5px); }
			66% { transform: translateY(5px) translateX(-5px); }
		}
		
		.floating {
			animation: float 6s ease-in-out infinite;
		}
		
		/* Morphing blob */
		@keyframes morph {
			0%, 100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
			50% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
		}
		
		.morphing {
			animation: morph 8s ease-in-out infinite;
		}
		
		/* Gradient animation */
		@keyframes gradient-shift {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}
		
		.animated-gradient {
			background-size: 200% 200%;
			animation: gradient-shift 10s ease infinite;
		}
		
		/* Pulse effect for circles */
		@keyframes pulse {
			0%, 100% { transform: scale(1); opacity: 0.3; }
			50% { transform: scale(1.2); opacity: 0.6; }
		}
		
		.pulse-circle {
			animation: pulse 4s ease-in-out infinite;
		}
		
		/* Connecting line animation */
		@keyframes drawLine {
			0% { stroke-dashoffset: 200; opacity: 0; }
			50% { opacity: 0.3; }
			100% { stroke-dashoffset: 0; opacity: 0.3; }
		}
		
		.connecting-line {
			stroke-dasharray: 200;
			stroke-dashoffset: 200;
			animation: drawLine 3s ease-out forwards;
		}
		
	</style>
	
	<!-- Hero Section -->
	<section class="relative overflow-hidden bg-gradient-to-b from-white via-gray-50 to-white">
		
		<!-- Animated gradient background -->
		<div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/30 via-transparent to-[#A8D381]/30 animated-gradient"></div>
		
		<!-- Floating particles -->
		<div class="absolute inset-0 pointer-events-none">
			<div class="floating absolute top-20 left-[10%] w-4 h-4 bg-[#54C4B6] rounded-full opacity-20"></div>
			<div class="floating absolute top-40 right-[15%] w-6 h-6 bg-[#A8D381] rounded-full opacity-20" style="animation-delay: 2s;"></div>
			<div class="floating absolute bottom-40 left-[20%] w-5 h-5 bg-[#54C4B6] rounded-full opacity-20" style="animation-delay: 4s;"></div>
			<div class="floating absolute bottom-20 right-[25%] w-4 h-4 bg-[#A8D381] rounded-full opacity-20" style="animation-delay: 1s;"></div>
			
			<!-- Pulse circles with IDs for connection -->
			<div id="left-dot-1" class="pulse-circle absolute top-[30%] left-[5%] w-8 h-8 bg-[#54C4B6] rounded-full"></div>
			<div id="right-dot-1" class="pulse-circle absolute top-[60%] right-[10%] w-10 h-10 bg-[#A8D381] rounded-full" style="animation-delay: 2s;"></div>
			<div id="left-dot-2" class="pulse-circle absolute bottom-[25%] left-[15%] w-6 h-6 bg-[#54C4B6] rounded-full" style="animation-delay: 1s;"></div>
			
			<!-- Connecting lines SVG -->
			<svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: -1;">
				<!-- Left side connection -->
				<line class="connecting-line" x1="5%" y1="30%" x2="15%" y2="75%" stroke="#54C4B6" stroke-width="1" opacity="0.3" style="animation-delay: 0.5s;" />
			</svg>
		</div>
		
		<div class="relative max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 py-32 lg:py-48">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
					Six hours, <span class="text-[#54C4B6] relative">lasting change<svg class="absolute -bottom-2 left-0 w-full" height="8" viewBox="0 0 200 8" preserveAspectRatio="none">
							<path d="M0 7 Q50 0 100 3 T200 7" stroke="#54C4B6" stroke-width="2" fill="none" opacity="0.5"/>
						</svg></span>
				</h1>
				<p class="text-2xl md:text-3xl font-semibold text-gray-700 mb-8 max-w-3xl mx-auto">
					Any team. Any learner. Any sector.
				</p>
				<p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-3xl mx-auto">
					<span class="text-[#54C4B6] font-semibold">Better Conversations</span> is an evidence-based communication framework that works across organisations, education, and research settings.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/get-started" class="bcf-cta-hero-primary">
						Get Started
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
						</svg>
					</a>
					<a href="/about/contact" class="bcf-cta-hero-secondary">
						Contact Us
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
		
		<!-- Additional pulse circles for right side -->
		<div class="absolute inset-0 pointer-events-none">
			<div id="right-dot-2" class="pulse-circle absolute top-[25%] right-[8%] w-7 h-7 bg-[#A8D381] rounded-full" style="animation-delay: 0.5s;"></div>
			<div id="right-dot-3" class="pulse-circle absolute bottom-[35%] right-[12%] w-8 h-8 bg-[#A8D381] rounded-full" style="animation-delay: 1.5s;"></div>
			
			<!-- Right side connections SVG -->
			<svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: -1;">
				<!-- Right side connections -->
				<line class="connecting-line" x1="92%" y1="25%" x2="90%" y2="60%" stroke="#A8D381" stroke-width="1" opacity="0.3" style="animation-delay: 1s;" />
				<line class="connecting-line" x1="90%" y1="60%" x2="88%" y2="65%" stroke="#A8D381" stroke-width="1" opacity="0.3" style="animation-delay: 1.5s;" />
			</svg>
		</div>
		
		<!-- Morphing decorative elements -->
		<div class="absolute top-10 right-0 w-96 h-96 bg-[#A8D381]/20 rounded-full blur-3xl morphing"></div>
		<div class="absolute bottom-10 left-0 w-96 h-96 bg-[#54C4B6]/20 rounded-full blur-3xl morphing" style="animation-delay: 4s;"></div>
		<div class="absolute bottom-0 right-20 w-72 h-72 bg-[#A8D381]/15 rounded-full blur-2xl morphing" style="animation-delay: 2s;"></div>
		<WaveSeparator topColor="transparent" bottomColor="white" class="absolute bottom-0 left-0 right-0" />
	</section>

	<!-- Who we are Section -->
	<section class="bg-white relative overflow-hidden">

		<!-- Section Content -->
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
			<div class="text-center">
				<SectionHeader heading="Nice to meet you" />
				<div class="mt-4 max-w-2xl text-xl text-gray-600 text-center mx-auto space-y-4">
					<p>We are <span class="text-[#54C4B6] font-semibold">The Better Conversations Foundation</span>, dedicated to helping people around the world connect on a human level. We develop and support open resources to help people listen to each other and be heard.</p>
					<p><span class="font-semibold">Better Conversations</span> improve collaboration, deepen learning, and strengthen research. We work with a select few organisations each year, to effectively measure impact.</p>
				</div>

				<!-- About Us CTA -->
				<div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/about" class="bcf-cta-primary">
						About Us
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
					</a>
					<a href="/approach/faqs" class="bcf-cta-secondary">
						FAQ's
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
		<WaveSeparator topColor="white" bottomColor="gray" class="absolute bottom-0 left-0 right-0" />
	</section>

	<!-- What we do Section -->
	<section class="bg-gray-50 relative overflow-hidden">

		<!-- Section Content -->
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
			<div class="text-center">
				<SectionHeader heading="Small changes, real impact" />
				<div class="mt-4 max-w-2xl text-xl text-gray-600 text-center mx-auto space-y-4">
						<p>Small shifts can have deep and lasting impact. We've distilled the essence of good conversational skills into behaviours that stick—whether you're leading a team, teaching a class, or conducting research.</p>
						<p>No fluff. Just a clear and reliable framework that's easy to understand and apply immediately. </p>
					</div>
			</div>
		</div>

		<!-- One Framework, Multiple Settings -->
		<div class="py-12 lg:py-16 max-w-7xl mx-auto px-6 sm:px-8 lg:px-8">

			<div class="grid md:grid-cols-3 gap-8">
				<!-- For Organisations -->
				<div class="bcf-card">
					<div class="bcf-icon">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-semibold text-gray-900 text-center">For Organisations</h3>
					<ul class="mt-4 space-y-3 text-gray-600 text-base">
						<CheckListItem>Reduces wasted time and rework</CheckListItem>
						<CheckListItem>Improves staff retention</CheckListItem>
						<CheckListItem>Scales across departments</CheckListItem>
						<CheckListItem>Works alongside AI tools</CheckListItem>
					</ul>
				</div>

				<!-- For Educators -->
				<div class="bcf-card">
					<div class="bcf-icon bg-[#A8D381]/10 text-[#A8D381]">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-semibold text-gray-900 text-center">For Educators</h3>
					<ul class="mt-4 space-y-3 text-gray-600 text-base">
						<CheckListItem color="green">Develops metacognitive skills</CheckListItem>
						<CheckListItem color="green">Supports pastoral care</CheckListItem>
						<CheckListItem color="green">Fits within curriculum</CheckListItem>
						<CheckListItem color="green">Adaptable across age groups</CheckListItem>
					</ul>
				</div>

				<!-- For Researchers -->
				<div class="bcf-card">
					<div class="bcf-icon">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-semibold text-gray-900 text-center">For Researchers</h3>
					<ul class="mt-4 space-y-3 text-gray-600 text-base">
						<CheckListItem>Standardised, reliable intervention</CheckListItem>
						<CheckListItem>Evidence-based framework</CheckListItem>
						<CheckListItem>Open-source approach</CheckListItem>
						<CheckListItem>Research collaboration opportunities</CheckListItem>
					</ul>
				</div>
			</div>
		</div>

		<div class="mt-4 max-w-2xl text-2xl font-semibold text-gray-900 text-center mx-auto">
				<p>One framework, multiple settings, far-reaching impact.</p>
		</div>
		<WaveSeparator topColor="gray" bottomColor="white" class="absolute bottom-0 left-0 right-0" />
	</section>

	<!-- How It Works Section -->
	<section class="bg-white relative overflow-hidden">
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
			<SectionHeader heading="Three interconnected elements" />

			<!-- Three Circle Diagram -->
			<div class="relative max-w-4xl mx-auto mb-16 mt-12">
				<svg viewBox="0 0 800 300" class="w-full h-auto" xmlns="http://www.w3.org/2000/svg">
					<!-- Left Circle - Evidence-Based Framework -->
					<circle cx="200" cy="150" r="120" fill="#54C4B6" opacity="0.75"/>

					<!-- Left Circle Icon -->
					<g transform="translate(200, 115) scale(1.5)">
						<path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
							stroke="white" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"
							transform="translate(-12, -12)"/>
					</g>

					<text x="200" y="168" text-anchor="middle" fill="white" font-size="18" font-weight="600">Evidence-Based</text>
					<text x="200" y="188" text-anchor="middle" fill="white" font-size="18" font-weight="600">Framework</text>

					<!-- Centre Circle - Community of Practice (overlapping both) -->
					<circle cx="400" cy="150" r="120" fill="#A8D381" opacity="0.75"/>

					<!-- Centre Circle Icon -->
					<g transform="translate(400, 115) scale(1.5)">
						<path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
							stroke="white" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"
							transform="translate(-12, -12)"/>
					</g>

					<text x="400" y="168" text-anchor="middle" fill="white" font-size="18" font-weight="600">Community</text>
					<text x="400" y="188" text-anchor="middle" fill="white" font-size="18" font-weight="600">of Practice</text>

					<!-- Right Circle - Open Resources -->
					<circle cx="600" cy="150" r="120" fill="#7EB8B0" opacity="0.75"/>

					<!-- Right Circle Icon -->
					<g transform="translate(600, 115) scale(1.5)">
						<path d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"
							stroke="white" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"
							transform="translate(-12, -12)"/>
					</g>

					<text x="600" y="168" text-anchor="middle" fill="white" font-size="18" font-weight="600">Open &</text>
					<text x="600" y="188" text-anchor="middle" fill="white" font-size="18" font-weight="600">Accessible</text>
				</svg>
			</div>

			<!-- Detailed Descriptions Below -->
			<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
				<div class="text-center">
					<h3 class="text-lg font-semibold text-gray-900 mb-3">Evidence-based framework</h3>
					<p class="text-base text-gray-600">
						Built on psychology, innovation and leadership research alongside organisational experience. <span class="font-medium text-gray-700">Our materials are freely available. </span>Partnership provides expertise in adapting them for your context.
					</p>
				</div>

				<div class="text-center">
					<h3 class="text-lg font-semibold text-gray-900 mb-3">Community of practice</h3>
					<p class="text-base text-gray-600">
						Supported by a global network of practitioners sharing insights across sectors. <span class="font-medium text-gray-700">Partnership connects you </span> with experienced leaders and practitioners who've successfully implemented Better Conversations in different sectors.
					</p>
				</div>

				<div class="text-center">
					<h3 class="text-lg font-semibold text-gray-900 mb-3">Open & accessible resources</h3>
					<p class="text-base text-gray-600">
						All materials transparently licensed under Creative Commons. Partnerships add implementation guidance, facilitator development, and sustained support for organisational change.
					</p>
				</div>
			</div>
		</div>
		<WaveSeparator topColor="white" bottomColor="gray" class="absolute bottom-0 left-0 right-0" />
	</section>

	<!-- Why Choose Better Conversations Section -->
	<section class="bg-gray-50 relative overflow-hidden">
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8 relative">
			<SectionHeader heading="Implementation that sticks" />

			<div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-3">
				<div class="bcf-card text-center">
					<div class="bcf-icon">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Guided implementation</h3>
					<p class="mt-2 text-base text-gray-600">
						Work directly with experienced leaders and practitioners who've successfully embedded Better Conversations across healthcare, education, and corporate contexts.
					</p>
				</div>

				<div class="bcf-card text-center">
					<div class="bcf-icon bg-[#A8D381]/10 text-[#A8D381]">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Measured impact</h3>
					<p class="mt-2 text-base text-gray-600">
						Co-design approaches to measure impact and gather participant experiences, tailored to your specific research question or organisational challenges. Apply it continuously and track the results.
					</p>
				</div>

				<div class="bcf-card text-center">
					<div class="bcf-icon">
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
						</svg>
					</div>
					<h3 class="mt-4 text-lg font-medium text-gray-900">Sustained support</h3>
					<p class="mt-2 text-base text-gray-600">
						Receive ongoing support to develop internal capacity throughout your organisation and the community it serves. Better Conversations diffuse naturally, with ease and in surprising ways.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Partnership & Resources CTA -->
	<section class="bg-gray-50 relative overflow-hidden">
		<div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-8">
			<div class="text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900">Ready to transform your organisation?</h2>
				<p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">Partner with us for deep implementation support—or explore our open-access materials to see our approach.</p>
				<div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/get-started" class="bcf-cta-primary">
