---
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const whitepapers = await getCollection('whitepapers');
  
  return whitepapers.map((paper) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

type Props = {
  paper: CollectionEntry<'whitepapers'>;
};

const { paper } = Astro.props;

// Import wrapper components that will render PDF versions
import StatBoxWrapper from '../../components/whitepapers/pdf/StatBoxWrapper.astro';
import TimelinePDF from '../../components/whitepapers/pdf/TimelinePDF.astro';
import TabPanelPDF from '../../components/whitepapers/pdf/TabPanelPDF.astro';
import ProgressBarPDF from '../../components/whitepapers/pdf/ProgressBarPDF.astro';
import InteractiveQuizPDF from '../../components/whitepapers/pdf/InteractiveQuizPDF.astro';

// Render content
const { Content } = await paper.render();

// Format date
const publicationDate = paper.data.date.toLocaleDateString('en-GB', { 
  day: 'numeric', 
  month: 'long', 
  year: 'numeric' 
});
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{paper.data.title} - Better Conversations Foundation</title>
  
  <style>
    /* PDF-specific styles */
    * {
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      color: #1a1a1a;
      margin: 0;
      padding: 0;
      background: white;
    }
    
    .pdf-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 40px;
    }
    
    /* Title page */
    .title-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      page-break-after: always;
      break-after: page;
    }
    
    .bcf-logo {
      width: 200px;
      margin-bottom: 60px;
    }
    
    h1 {
      font-size: 36px;
      color: #54C4B6;
      margin-bottom: 20px;
      line-height: 1.2;
    }
    
    .subtitle {
      font-size: 20px;
      color: #666;
      margin-bottom: 40px;
      line-height: 1.4;
    }
    
    .meta-info {
      border-top: 2px solid #54C4B6;
      padding-top: 20px;
      margin-top: 60px;
    }
    
    .authors {
      font-size: 18px;
      margin-bottom: 10px;
    }
    
    .date {
      color: #666;
      font-size: 16px;
    }
    
    /* Content styles */
    .whitepaper-content {
      page-break-before: always;
      break-before: page;
    }
    
    .whitepaper-content h2 {
      font-size: 28px;
      color: #54C4B6;
      margin-top: 40px;
      margin-bottom: 20px;
      page-break-after: avoid;
      break-after: avoid;
    }
    
    .whitepaper-content h3 {
      font-size: 22px;
      color: #333;
      margin-top: 30px;
      margin-bottom: 15px;
      page-break-after: avoid;
      break-after: avoid;
    }
    
    .whitepaper-content h4 {
      font-size: 18px;
      color: #444;
      margin-top: 25px;
      margin-bottom: 10px;
      page-break-after: avoid;
      break-after: avoid;
    }
    
    .whitepaper-content p {
      margin-bottom: 15px;
      text-align: justify;
      orphans: 3;
      widows: 3;
    }
    
    .whitepaper-content ul, .whitepaper-content ol {
      margin-bottom: 20px;
      padding-left: 30px;
    }
    
    .whitepaper-content li {
      margin-bottom: 8px;
      orphans: 3;
      widows: 3;
    }
    
    .whitepaper-content blockquote {
      border-left: 4px solid #54C4B6;
      padding-left: 20px;
      margin: 20px 0;
      font-style: italic;
      color: #555;
      page-break-inside: avoid;
      break-inside: avoid;
    }
    
    .whitepaper-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      page-break-inside: avoid;
      break-inside: avoid;
    }
    
    .whitepaper-content th {
      background-color: #f5f5f5;
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
      font-weight: bold;
    }
    
    .whitepaper-content td {
      border: 1px solid #ddd;
      padding: 12px;
    }
    
    .whitepaper-content img {
      max-width: 100%;
      height: auto;
      margin: 20px 0;
      page-break-inside: avoid;
      break-inside: avoid;
    }
    
    .whitepaper-content pre {
      background-color: #f5f5f5;
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 15px;
      overflow-x: auto;
      margin: 20px 0;
      page-break-inside: avoid;
      break-inside: avoid;
    }
    
    .whitepaper-content code {
      background-color: #f5f5f5;
      padding: 2px 4px;
      border-radius: 3px;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
    }
    
    /* Links for print */
    a {
      color: #54C4B6;
      text-decoration: underline;
    }
    
    a[href^="http"]:after {
      content: " (" attr(href) ")";
      font-size: 0.8em;
      color: #666;
    }
    
    a[href^="#"]:after,
    a[href^="/"]:after {
      content: "";
    }
    
    /* Page breaks */
    @page {
      margin: 2cm;
      size: A4;
    }
    
    @page :first {
      margin-top: 0;
    }
    
    /* Footer */
    .pdf-footer {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      text-align: center;
      font-size: 10px;
      color: #666;
      padding: 10px;
    }
    
    /* Hide interactive elements */
    button, .interactive-element, .animation {
      display: none !important;
    }
  </style>
</head>
<body>
  <div class="pdf-container">
    <!-- Title Page -->
    <div class="title-page">
      <img src="/Better-Conversations-Foundation-RGB.png" alt="Better Conversations Foundation" class="bcf-logo" />
      
      <h1>{paper.data.title}</h1>
      <p class="subtitle">{paper.data.excerpt}</p>
      
      <div class="meta-info">
        <p class="authors">
          <strong>Authors:</strong> {paper.data.authors.join(', ')}
        </p>
        <p class="date">
          <strong>Published:</strong> {publicationDate}
        </p>
        <p class="tags">
          <strong>Topics:</strong> {paper.data.tags.join(', ')}
        </p>
      </div>
    </div>
    
    <!-- Content -->
    <div class="whitepaper-content">
      <Content components={{
        StatBox: StatBoxWrapper,
        Timeline: TimelinePDF,
        TabPanel: TabPanelPDF,
        ProgressBar: ProgressBarPDF,
        InteractiveQuiz: InteractiveQuizPDF
      }} />
    </div>
    
    <!-- Footer -->
    <div class="pdf-footer">
      Better Conversations Foundation | www.betterconversations.foundation
    </div>
  </div>
</body>
</html>