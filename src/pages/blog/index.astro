---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image, getImage } from 'astro:assets';
import { formatDistanceToNow } from '../../utils/dateUtils';
import { getAuthorImage } from '../../data/authorImages';
import { getBlogImage } from '../../data/blogImages';


const allPosts = await getCollection('blog');

// Sort posts by date
const blogPosts = await Promise.all(
  allPosts
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .map(async (post) => {
      const heroImage = getBlogImage(post.slug);
      let optimizedImageUrl = post.data.image; // fallback to original
      
      if (heroImage) {
        const optimized = await getImage({ src: heroImage, width: 800, height: 400 });
        optimizedImageUrl = optimized.src;
      }
      
      return {
        ...post.data,
        slug: post.slug,
        readingTime: Math.ceil((post.body?.length || 0) / 1000),
        publishedAt: formatDistanceToNow(post.data.date),
        tags: post.data.tags || [],
        optimizedImage: heroImage,
        image: optimizedImageUrl
      };
    })
);

// Get spotlight posts
const spotlightPosts = blogPosts.filter(post => post.spotlight);
const regularPosts = blogPosts.filter(post => !post.spotlight);

// Get all unique categories and authors
const categories = ["All", ...new Set(blogPosts.map(post => post.category).filter(Boolean))];
const authors = [...new Set(blogPosts.map(post => post.author).filter(Boolean))];
const allTags = [...new Set(blogPosts.flatMap(post => post.tags))].sort();
---

<Layout 
  title="Blog - Better Conversations Foundation" 
  description="Insights and stories about Better Conversations."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-white via-gray-50 to-white py-24 lg:py-32">
    <!-- Enhanced gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#54C4B6]/25 via-transparent to-[#A8D381]/25"></div>
    
    <!-- Larger decorative circles -->
    <div class="absolute top-10 left-[5%] w-64 h-64 bg-[#54C4B6]/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-[5%] w-72 h-72 bg-[#A8D381]/20 rounded-full blur-3xl"></div>
    <div class="absolute top-40 right-[20%] w-48 h-48 bg-[#54C4B6]/15 rounded-full blur-2xl"></div>
    <div class="absolute bottom-20 left-[15%] w-56 h-56 bg-[#A8D381]/15 rounded-full blur-2xl"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
