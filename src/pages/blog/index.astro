                  <input type="email" name="email" placeholder="Your email" class="w-full px-3 py-2 mb-3 text-sm border border-gray-200 rounded-md focus:ring-[#54C4B6] focus:border-[#54C4B6]" required />
                  <button type="submit" class="w-full px-4 py-2 bg-[#54C4B6] text-white rounded-md hover:bg-[#54C4B6]/90 transition-colors text-sm font-medium">
                    Subscribe
                  </button>
                </form>
              </div>
            </div>
          </aside>

          <!-- Blog Posts Grid -->
          <div class="lg:col-span-3">
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-2xl font-bold text-gray-900">Latest Articles</h2>
            </div>

            <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">
              {regularPosts.map((post) => (
                <article class="group bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-300 flex flex-col">
                  <div class="h-48 bg-gray-200 flex-shrink-0">
                    {post.optimizedImage ? (
                      <Image 
                        src={post.optimizedImage} 
                        alt={post.title} 
                        width={400}
                        height={192}
                        class="w-full h-full object-cover" 
                      />
                    ) : post.image ? (
                      <img src={post.image} alt={post.title} class="w-full h-full object-cover" />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 flex items-center justify-center">
                        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"></path>
                        </svg>
                      </div>
                    )}
                  </div>
                  <div class="p-6 flex flex-col flex-grow">
                    <div class="flex items-center gap-3 text-xs text-gray-500 mb-2">
                      <a 
                        href={`/blog?category=${encodeURIComponent(post.category)}`}
                        class="bg-black/60 backdrop-blur-sm px-3 py-1 border-l-2 border-[#54C4B6] text-center hover:bg-black/80 transition-colors text-white"
                      >
                        {post.category}
                      </a>
                      <a 
                        href={`/blog?author=${encodeURIComponent(post.author)}`}
                        class="hover:text-[#54C4B6] transition-colors"
                      >
                        {post.author}
                      </a>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-[#54C4B6] transition-colors">
                      <a href={`/blog/${post.slug}`}>{post.title}</a>
                    </h3>
                    <p class="text-gray-600 text-sm mb-4 flex-grow">{post.excerpt}</p>
                    <div class="flex items-center justify-between mt-auto">
                      <time class="text-xs text-gray-500">{post.publishedAt}</time>
                      {post.tags?.length > 0 && (
                        <div class="flex gap-2 flex-wrap">
                          {post.tags.slice(0, 2).map((tag) => (
                            <a 
                              href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                              class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full hover:bg-[#54C4B6] hover:text-white transition-colors"
                            >
                              #{tag}
                            </a>
                          ))}
                          {post.tags.length > 2 && (
                            <span class="text-xs text-gray-400">+{post.tags.length - 2}</span>
                          )}
                        </div>
                      )}
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Alpine.js enhanced version (progressive enhancement) -->
  <div x-data="blogFilters()" x-init="initFromURL()" x-cloak style="display: none;">
    <!-- Spotlight Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Articles</h2>
        <div class="grid gap-8 lg:grid-cols-2">
          {spotlightPosts.map((post) => (
            <article class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
              <div class="h-64 bg-gray-200 flex-shrink-0">
                {post.optimizedImage ? (
                  <Image 
                    src={post.optimizedImage} 
                    alt={post.title} 
                    width={800}
                    height={400}
                    class="w-full h-full object-cover" 
                  />
                ) : post.image ? (
                  <img src={post.image} alt={post.title} class="w-full h-full object-cover" />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 flex items-center justify-center">
                    <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"></path>
                    </svg>
                  </div>
                )}
              </div>
              <div class="p-8 flex flex-col h-full">
                  <div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
                    <span class="bg-[#54C4B6] text-white px-3 py-1 rounded-full text-xs font-medium">Featured</span>
                    <span>{post.category}</span>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-[#54C4B6] transition-colors">
                    <a href={`/blog/${post.slug}`}>{post.title}</a>
                  </h3>
                  <p class="text-gray-600 mb-4 flex-grow">{post.excerpt}</p>
                  <div class="mt-auto">
                    <div class="flex items-center gap-3 mb-4">
                      <Image 
                        src={getAuthorImage(post.author)} 
                        alt={post.author} 
                        width={40}
                        height={40}
                        class="w-10 h-10 rounded-full object-cover"
                      />
                      <div>
                        <p class="text-sm font-medium text-gray-900">{post.author}</p>
                        <p class="text-xs text-gray-500">{post.readingTime} min read</p>
                      </div>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">{post.publishedAt}</span>
                      {post.tags?.length > 0 && (
                        <div class="flex gap-2 flex-wrap">
                          {post.tags.slice(0, 2).map((tag) => (
                            <button 
                              @click="setFilter('tag', tag)"
                              class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full hover:bg-[#54C4B6] hover:text-white transition-colors cursor-pointer"
                            >
                              #{tag}
                            </button>
                          ))}
                          {post.tags.length > 2 && (
                            <span class="text-xs text-gray-400">+{post.tags.length - 2}</span>
                          )}
                        </div>
                      )}
                    </div>
                  </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Main Blog Grid with Sidebar -->
    <section id="latest" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-4 lg:gap-8">
          <!-- Sidebar -->
          <aside class="mb-8 lg:mb-0">
            <div class="sticky top-20">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Categories</h3>
              <nav class="space-y-1">
                <template x-for="category in categories" :key="category">
                  <button
                    @click="setFilter('category', category === 'All' ? '' : category)"
                    :class="(filters.category === category || (filters.category === '' && category === 'All')) ? 'bg-white text-[#54C4B6]' : ''"
                    class="group flex items-center justify-between w-full px-3 py-2 text-sm font-medium rounded-md hover:text-[#54C4B6] hover:bg-white transition-colors text-left"
                  >
                    <span x-text="category"></span>
                    <span 
                      class="text-xs text-gray-400 group-hover:text-[#54C4B6]"
                      x-text="getCategoryCount(category)"
                    ></span>
                  </button>
                </template>
              </nav>

              <div class="mt-8 p-6 bg-gradient-to-br from-[#54C4B6]/10 to-[#A8D381]/10 rounded-lg overflow-hidden">
                <h4 class="font-semibold text-gray-900 mb-2">Newsletter</h4>
                <p class="text-sm text-gray-600 mb-4">Get the latest insights delivered to your inbox.</p>
                <input type="email" placeholder="Your email" class="w-full px-3 py-2 mb-3 text-sm border border-gray-200 rounded-md focus:ring-[#54C4B6] focus:border-[#54C4B6]" />
                <button class="w-full px-4 py-2 bg-[#54C4B6] text-white rounded-md hover:bg-[#54C4B6]/90 transition-colors text-sm font-medium">
                  Subscribe
                </button>
              </div>
            </div>
          </aside>

          <!-- Blog Posts Grid -->
          <div class="lg:col-span-3">
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center gap-4">
                <h2 class="text-2xl font-bold text-gray-900">Latest Articles</h2>
                <!-- Active Filters Display -->
                <div x-show="hasActiveFilters" class="flex gap-2 flex-wrap">
                  <button 
                    @click="clearAllFilters"
                    class="inline-flex items-center gap-1 px-3 py-1 text-xs font-medium text-[#54C4B6] border border-[#54C4B6] rounded-full hover:bg-[#54C4B6] hover:text-white transition-colors"
                  >
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Clear Filters
                  </button>
                  <span x-show="filters.category" class="px-3 py-1 text-xs font-medium bg-[#54C4B6] text-white rounded-full" x-text="'Category: ' + filters.category"></span>
                  <span x-show="filters.author" class="px-3 py-1 text-xs font-medium bg-[#A8D381] text-white rounded-full" x-text="'Author: ' + filters.author"></span>
                  <button 
                    x-show="filters.tag" 
                    @click="setFilter('tag', '')"
                    class="px-3 py-1 text-xs font-medium bg-gray-600 text-white rounded-full cursor-pointer hover:bg-gray-700 transition-colors"
                    x-text="'Tag: ' + filters.tag"
                    title="Click to clear tag filter"
                  ></button>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <label for="sort" class="text-sm text-gray-600">Sort by:</label>
                <select 
                  x-model="sortBy" 
                  @change="updateURL"
                  class="text-sm border-gray-300 rounded-md focus:ring-[#54C4B6] focus:border-[#54C4B6]"
                >
                  <option value="latest">Latest</option>
                  <option value="popular">Popular</option>
                  <option value="oldest">Oldest</option>
                </select>
              </div>
            </div>

            <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">
              <template x-for="post in filteredPosts" :key="post.slug">
                <article 
                  x-show="true"
                  x-transition:enter="transition ease-out duration-300"
                  x-transition:enter-start="opacity-0 transform scale-95"
                  x-transition:enter-end="opacity-100 transform scale-100"
                  class="group bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-300 flex flex-col"
                >
                  <div class="h-48 bg-gray-200 flex-shrink-0">
                    <img x-show="post.image" :src="post.image" :alt="post.title" class="w-full h-full object-cover" />
                    <div x-show="!post.image" class="w-full h-full bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 flex items-center justify-center">
                      <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="p-6 flex flex-col flex-grow">
                    <div class="flex items-center gap-3 text-xs text-gray-500 mb-2">
                      <button 
                        @click="setFilter('category', post.category)"
                        class="bg-black/60 backdrop-blur-sm px-3 py-1 border-l-2 border-[#54C4B6] text-center cursor-pointer hover:bg-black/80 transition-colors text-white"
                        x-text="post.category"
                      ></button>
                      <button 
                        @click="setFilter('author', post.author)"
                        class="cursor-pointer hover:text-[#54C4B6] transition-colors"
                        x-text="post.author"
                      ></button>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-[#54C4B6] transition-colors">
                      <a :href="'/blog/' + post.slug" x-text="post.title"></a>
                    </h3>
                    <p class="text-gray-600 text-sm mb-4 flex-grow" x-text="post.excerpt"></p>
                    <div class="flex items-center justify-between mt-auto">
                      <time class="text-xs text-gray-500" x-text="post.publishedAt"></time>
                      <div class="flex gap-2 flex-wrap" x-show="post.tags.length > 0">
                        <template x-for="tag in post.tags.slice(0, 2)" :key="tag">
                          <button 
                            @click="setFilter('tag', tag)"
                            class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full hover:bg-[#54C4B6] hover:text-white transition-colors cursor-pointer"
                            x-text="'#' + tag"
                          ></button>
                        </template>
                        <span x-show="post.tags.length > 2" class="text-xs text-gray-400" x-text="'+' + (post.tags.length - 2)"></span>
                      </div>
                    </div>
                  </div>
                </article>
              </template>
            </div>
            
            <!-- No Results -->
            <div x-show="filteredPosts.length === 0" class="text-center py-12">
              <p class="text-gray-500 text-lg mb-4">No articles match your current filters.</p>
              <button @click="clearAllFilters" class="text-[#54C4B6] hover:underline">Clear all filters</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>


  <script define:vars={{ regularPosts, categories }} is:inline>
    // Pass data through global variables for Alpine
    const regularPostsData = regularPosts;
    const categoriesData = categories;
    
    // Progressive enhancement: Hide SSR content and show Alpine content when JS loads
    document.addEventListener('alpine:initialized', () => {
      const ssrContent = document.querySelector('.blog-content-ssr');
      const alpineContent = document.querySelector('[x-data="blogFilters()"]');
      
      if (ssrContent && alpineContent) {
        ssrContent.style.display = 'none';
        alpineContent.style.display = 'block';
      }
    });
    
    document.addEventListener('alpine:init', () => {
      window.Alpine.data('blogFilters', () => ({
        posts: regularPostsData,
        categories: categoriesData,
        filters: {
          category: '',
          author: '',
          tag: ''
        },
        sortBy: 'latest',
        
        get filteredPosts() {
          let filtered = [...this.posts];
          
          // Apply filters
          if (this.filters.category) {
            filtered = filtered.filter(post => post.category === this.filters.category);
          }
          
          if (this.filters.author) {
            filtered = filtered.filter(post => post.author === this.filters.author);
          }
          
          if (this.filters.tag) {
            filtered = filtered.filter(post => post.tags.includes(this.filters.tag));
          }
          
          // Apply sorting
          filtered.sort((a, b) => {
            switch(this.sortBy) {
              case 'oldest':
                return new Date(a.date).getTime() - new Date(b.date).getTime();
              case 'popular':
                // You could add a popularity metric here
                return 0;
              case 'latest':
              default:
                return new Date(b.date).getTime() - new Date(a.date).getTime();
            }
          });
          
          return filtered;
        },
        
        get hasActiveFilters() {
          return this.filters.category || this.filters.author || this.filters.tag;
        },
        
        setFilter(type, value) {
          this.filters[type] = value;
          this.updateURL();
        },
        
        clearAllFilters() {
          this.filters = {
            category: '',
            author: '',
            tag: ''
          };
          this.updateURL();
        },
        
        getCategoryCount(category) {
          if (category === 'All') {
            return this.posts.length;
          }
          return this.posts.filter(p => p.category === category).length;
        },
        
        updateURL() {
          const params = new URLSearchParams();
          
          if (this.filters.category) params.set('category', this.filters.category);
          if (this.filters.author) params.set('author', this.filters.author);
          if (this.filters.tag) params.set('tag', this.filters.tag);
          if (this.sortBy !== 'latest') params.set('sort', this.sortBy);
          
          const newURL = `${window.location.pathname}${params.toString() ? '?' + params : ''}`;
          window.history.replaceState({}, '', newURL);
        },
        
        initFromURL() {
          const params = new URLSearchParams(window.location.search);
          
          this.filters.category = params.get('category') || '';
          this.filters.author = params.get('author') || '';
          this.filters.tag = params.get('tag') || '';
          this.sortBy = params.get('sort') || 'latest';
        }
      }));
    });
  </script>
