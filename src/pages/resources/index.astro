---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';
---

<Layout title="Resources - Better Conversations Foundation">
  <style>
    /* Card hover effect */
    .resource-card {
      transition: all 0.3s ease;
      background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
    }
    
    .resource-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
    
    /* Icon animation */
    .resource-icon {
      transition: all 0.3s ease;
    }
    
    .resource-card:hover .resource-icon {
      transform: scale(1.1);
    }
    
    /* Gradient text */
    .gradient-text {
      background: linear-gradient(135deg, #54C4B6 0%, #A8D381 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    /* Quick links network effect */
    .quick-links-container {
      position: relative;
    }
    
    .network-lines {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }
    
    .quick-link-card {
      position: relative;
      z-index: 10;
      background: white;
      transition: all 0.3s ease;
      overflow: hidden;
    }
    
    .quick-link-card::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: radial-gradient(circle, #54C4B6 0%, transparent 70%);
      transform: translate(-50%, -50%);
      transition: width 0.6s ease, height 0.6s ease;
      opacity: 0.3;
      z-index: -1;
    }
    
    .quick-link-card:hover::before {
      width: 200px;
      height: 200px;
    }
    
    .quick-link-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      border-color: #54C4B6;
    }
    
    .quick-link-icon {
      transition: all 0.3s ease;
    }
    
    .quick-link-card:hover .quick-link-icon {
      transform: scale(1.1) rotate(5deg);
      color: #54C4B6;
    }
    
    @keyframes pulse-line {
      0% {
        stroke-dashoffset: 0;
        opacity: 0;
      }
      50% {
        opacity: 1;
      }
      100% {
        stroke-dashoffset: -30;
        opacity: 0;
      }
    }
  </style>

  <HeroSection 
    title="Explore Our Resources"
    titleHighlight="Resources"
    description="Access a wealth of knowledge, tools, and insights to enhance your Better Conversations journey. From technical documentation to thought-provoking articles, we've gathered everything you need in one place."
  />

  <!-- Resources Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Blog Card -->
        <a href="/blog" class="resource-card block p-8 rounded-2xl border border-gray-200 hover:border-[#54C4B6]/50 group">
          <div class="resource-icon w-16 h-16 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-xl flex items-center justify-center mb-6 group-hover:from-[#54C4B6]/30 group-hover:to-[#A8D381]/30">
            <svg class="w-8 h-8 text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Blog</h2>
          <p class="text-gray-600 mb-4">
            Discover insights, tips, and stories from our community. Stay updated with the latest developments in Better Conversations methodology and learn from real-world applications.
          </p>
          <div class="flex items-center text-[#54C4B6] font-medium">
            <span>Explore articles</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
        </a>

        <!-- Whitepapers Card -->
        <a href="/whitepapers" class="resource-card block p-8 rounded-2xl border border-gray-200 hover:border-[#54C4B6]/50 group">
          <div class="resource-icon w-16 h-16 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-xl flex items-center justify-center mb-6 group-hover:from-[#54C4B6]/30 group-hover:to-[#A8D381]/30">
            <svg class="w-8 h-8 text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Whitepapers</h2>
          <p class="text-gray-600 mb-4">
            Access in-depth research and serious articles that provide evidence-based insights. Perfect for presenting to organizations and decision-makers who need comprehensive information.
          </p>
          <div class="flex items-center text-[#54C4B6] font-medium">
            <span>Read research</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
        </a>

        <!-- Tools & Documentation Card -->
        <a href="https://betterconversations.foundation/documentation/index.html" target="_blank" rel="noopener noreferrer" class="resource-card block p-8 rounded-2xl border border-gray-200 hover:border-[#54C4B6]/50 group">
          <div class="resource-icon w-16 h-16 bg-gradient-to-br from-[#54C4B6]/20 to-[#A8D381]/20 rounded-xl flex items-center justify-center mb-6 group-hover:from-[#54C4B6]/30 group-hover:to-[#A8D381]/30">
            <svg class="w-8 h-8 text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Tools & Documentation</h2>
          <p class="text-gray-600 mb-4">
            Access comprehensive technical documentation, API references, and tools for implementing Better Conversations methodology. Find everything you need to get started and scale your practice.
          </p>
          <div class="flex items-center text-[#54C4B6] font-medium">
            <span>View documentation</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </div>
        </a>

      </div>

      <!-- Additional Resources Coming Soon -->
      <div class="mt-16 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">More Resources Coming Soon</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          We're constantly expanding our resource library. Stay tuned for guides, success stories, video tutorials, and more tools to support your journey.
        </p>
        
        <!-- Newsletter Signup -->
        <div class="max-w-md mx-auto">
          <div class="bg-gradient-to-r from-[#54C4B6]/10 to-[#A8D381]/10 rounded-2xl p-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Stay Updated</h3>
            <p class="text-gray-600 mb-4">Get notified when we add new resources</p>
            <form class="flex gap-3">
              <input 
                type="email" 
                placeholder="Your email" 
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#54C4B6] focus:border-transparent"
              />
              <button 
                type="submit"
                class="px-6 py-2 bg-gradient-to-r from-[#54C4B6] to-[#A8D381] text-white font-medium rounded-lg hover:shadow-lg transform hover:scale-105 transition-all duration-300"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Quick Links Section with Network Effect -->
  <section class="py-16 bg-gray-50 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">Quick Access</h2>
      <p class="text-gray-600 text-center mb-8">Navigate to key areas of Better Conversations</p>
      
      <div class="quick-links-container relative">
        <!-- Network lines SVG -->
        <svg class="network-lines hidden md:block" viewBox="0 0 800 200">
          <defs>
            <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:#54C4B6;stop-opacity:0.3" />
              <stop offset="50%" style="stop-color:#A8D381;stop-opacity:0.3" />
              <stop offset="100%" style="stop-color:#54C4B6;stop-opacity:0.3" />
            </linearGradient>
          </defs>
          <!-- Connecting lines -->
          <line x1="200" y1="100" x2="400" y2="100" stroke="url(#lineGradient)" stroke-width="2" stroke-dasharray="5,5">
            <animate attributeName="stroke-dashoffset" from="0" to="-10" dur="20s" repeatCount="indefinite" />
          </line>
          <line x1="400" y1="100" x2="600" y2="100" stroke="url(#lineGradient)" stroke-width="2" stroke-dasharray="5,5">
            <animate attributeName="stroke-dashoffset" from="0" to="-10" dur="20s" repeatCount="indefinite" />
          </line>
          <line x1="600" y1="100" x2="800" y2="100" stroke="url(#lineGradient)" stroke-width="2" stroke-dasharray="5,5">
            <animate attributeName="stroke-dashoffset" from="0" to="-10" dur="20s" repeatCount="indefinite" />
          </line>
          <!-- Diagonal connections -->
          <line x1="200" y1="100" x2="600" y2="100" stroke="url(#lineGradient)" stroke-width="1" stroke-dasharray="3,7" opacity="0.2">
            <animate attributeName="stroke-dashoffset" from="0" to="-10" dur="15s" repeatCount="indefinite" />
          </line>
          <line x1="400" y1="100" x2="800" y2="100" stroke="url(#lineGradient)" stroke-width="1" stroke-dasharray="3,7" opacity="0.2">
            <animate attributeName="stroke-dashoffset" from="0" to="-10" dur="15s" repeatCount="indefinite" />
          </line>
        </svg>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <a href="/learn/getting-started" class="quick-link-card text-center p-6 rounded-xl border-2 border-gray-200 group">
            <div class="relative">
              <svg class="quick-link-icon w-12 h-12 mx-auto mb-3 text-gray-600 group-hover:text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-[#A8D381] rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <span class="text-gray-700 font-medium">Getting Started</span>
            <p class="text-sm text-gray-500 mt-1">Begin your journey</p>
          </a>
          
          <a href="/community" class="quick-link-card text-center p-6 rounded-xl border-2 border-gray-200 group">
            <div class="relative">
              <svg class="quick-link-icon w-12 h-12 mx-auto mb-3 text-gray-600 group-hover:text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-[#A8D381] rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <span class="text-gray-700 font-medium">Community</span>
            <p class="text-sm text-gray-500 mt-1">Connect with others</p>
          </a>
          
          <a href="/about/contact" class="quick-link-card text-center p-6 rounded-xl border-2 border-gray-200 group">
            <div class="relative">
              <svg class="quick-link-icon w-12 h-12 mx-auto mb-3 text-gray-600 group-hover:text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-[#A8D381] rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <span class="text-gray-700 font-medium">Contact Us</span>
            <p class="text-sm text-gray-500 mt-1">Get in touch</p>
          </a>
          
          <a href="/partner" class="quick-link-card text-center p-6 rounded-xl border-2 border-gray-200 group">
            <div class="relative">
              <svg class="quick-link-icon w-12 h-12 mx-auto mb-3 text-gray-600 group-hover:text-[#54C4B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-[#A8D381] rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <span class="text-gray-700 font-medium">Partner With Us</span>
            <p class="text-sm text-gray-500 mt-1">Join our mission</p>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Background decoration -->
    <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-[#54C4B6]/10 rounded-full blur-3xl"></div>
    <div class="absolute -top-10 -left-10 w-40 h-40 bg-[#A8D381]/10 rounded-full blur-3xl"></div>
  </section>
</Layout>