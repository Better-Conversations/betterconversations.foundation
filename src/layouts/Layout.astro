---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
	title?: string;
}

const { title = 'BCF Content' } = Astro.props;
const isShowcasePage = Astro.url.pathname === '/showcase' || Astro.url.pathname === '/showcase/';
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={isShowcasePage ? "h-full overflow-hidden" : "h-full"}>
		<Navbar />
		<main class={isShowcasePage ? "pt-16 h-full" : "pt-16"}> <!-- No pb-16 as the footer is sticky and merges straight into the main content -->
			<slot />
		</main>
		{!isShowcasePage && <Footer />}
	</body>
</html>

