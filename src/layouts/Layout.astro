---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Search from '../components/Search.astro';
import { getCollection } from 'astro:content';
import { getAllTags } from '../utils/tags';
import { pageMetadata } from '../data/pageMetadata';
import { generateMetaProperties, generateStructuredData, generateCanonicalURL } from '../utils/metadata';
import '../styles/global.css';

export interface Props {
	title?: string;
	description?: string;
	keywords?: string[];
	author?: string | string[];
	publishDate?: Date;
	schemaType?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title = 'BCF Content',
	description,
	keywords,
	author,
	publishDate,
	schemaType = 'WebPage',
	image,
	canonicalURL
} = Astro.props;

// Generate enhanced metadata
const metaProps = generateMetaProperties(Astro.url.pathname, {
	title,
	description,
	keywords,
	author,
	publishDate,
	schemaType,
	ogImage: image,
	canonicalURL
});

const structuredData = generateStructuredData(metaProps, Astro.url.pathname);
const canonicalUrl = canonicalURL || generateCanonicalURL(Astro.url.pathname);
const isShowcasePage = Astro.url.pathname === '/showcase' || Astro.url.pathname === '/showcase/';

// Prepare search data
const [blogs, whitepapers, tags] = await Promise.all([
  getCollection('blog'),
  getCollection('whitepapers'),
  getAllTags()
]);

const searchData = {
  blogs: blogs.map(post => ({
    type: 'blog',
    title: post.data.title,
    excerpt: post.data.excerpt,
    slug: `/blog/${post.slug}`,
    tags: post.data.tags,
    author: post.data.author,
    date: post.data.date
  })),
  whitepapers: whitepapers.map(paper => ({
    type: 'whitepaper',
    title: paper.data.title,
    excerpt: paper.data.excerpt,
    slug: `/whitepapers/${paper.slug}`,
    tags: paper.data.tags,
    authors: paper.data.authors,
    date: paper.data.date
  })),
  pages: Object.entries(pageMetadata).map(([path, page]) => ({
    type: 'page',
    title: page.title,
    excerpt: page.excerpt,
    slug: path,
    tags: page.tags,
    category: page.category
  })),
  tags: tags.map(tag => ({
    type: 'tag',
    title: tag.name,
    count: tag.count,
    slug: `/tags/${tag.name.toLowerCase().replace(/\s+/g, '-')}`
  }))
};
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{metaProps.title}</title>
		
		<!-- SEO Meta Tags -->
		<meta name="description" content={metaProps.description} />
		{metaProps.keywords && metaProps.keywords.length > 0 && <meta name="keywords" content={metaProps.keywords.join(', ')} />}
		{metaProps.author && <meta name="author" content={Array.isArray(metaProps.author) ? metaProps.author.join(', ') : metaProps.author} />}
		<link rel="canonical" href={canonicalUrl} />
		
		<!-- OpenGraph Meta Tags -->
		<meta property="og:title" content={metaProps.ogTitle} />
		<meta property="og:description" content={metaProps.ogDescription} />
		<meta property="og:type" content={metaProps.ogType} />
		<meta property="og:url" content={Astro.url.href} />
		{metaProps.ogImage && <meta property="og:image" content={metaProps.ogImage.startsWith('http') ? metaProps.ogImage : new URL(metaProps.ogImage, Astro.site).href} />}
		<meta property="og:site_name" content="Better Conversations Foundation" />
		
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content={metaProps.twitterCard} />
		<meta name="twitter:title" content={metaProps.ogTitle} />
		<meta name="twitter:description" content={metaProps.ogDescription} />
		{metaProps.ogImage && <meta name="twitter:image" content={metaProps.ogImage.startsWith('http') ? metaProps.ogImage : new URL(metaProps.ogImage, Astro.site).href} />}
		
		<!-- Additional Meta Tags -->
		<meta name="robots" content="index, follow" />
		<meta name="language" content="en-GB" />
		{metaProps.publishDate && <meta name="article:published_time" content={metaProps.publishDate.toISOString()} />}
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
	</head>
	<body class={isShowcasePage ? "h-full overflow-hidden" : "h-full"}>
		<Navbar />
		<main class={isShowcasePage ? "pt-16 h-full" : "pt-16"}> <!-- No pb-16 as the footer is sticky and merges straight into the main content -->
			<slot />
		</main>
		{!isShowcasePage && <Footer />}
		<Search searchData={searchData} />
	</body>
</html>

